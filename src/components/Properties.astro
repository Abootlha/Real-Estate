---
const listings = [
    {
        image: "https://images.unsplash.com/photo-1600596542815-ffad4c1539a9?w=600&h=450&fit=crop&q=90",
        price: "₹18,000",
        period: "/month",
        title: "Andheri East, Mumbai",
        beds: 4,
        baths: 2,
        sqft: "1,850 sq ft",
        tag: "Popular",
    },
    {
        image: "https://images.unsplash.com/photo-1600585154340-be6161a56a0c?w=600&h=450&fit=crop&q=90",
        price: "₹22,000",
        period: "/month",
        title: "Whitefield, Bangalore",
        beds: 3,
        baths: 2,
        sqft: "1,950 sq ft",
        tag: "New",
    },
    {
        image: "https://images.unsplash.com/photo-1600607687939-ce8a6c25118c?w=600&h=450&fit=crop&q=90",
        price: "₹15,000",
        period: "/month",
        title: "Hinjewadi, Pune",
        beds: 2,
        baths: 2,
        sqft: "1,250 sq ft",
        tag: null,
    },
    {
        image: "https://images.unsplash.com/photo-1613490493576-7fde63acd811?w=600&h=450&fit=crop&q=90",
        price: "₹35,000",
        period: "/month",
        title: "Dwarka, Delhi",
        beds: 4,
        baths: 3,
        sqft: "2,100 sq ft",
        tag: "Premium",
    },
    {
        image: "https://images.unsplash.com/photo-1600566753190-17f0baa2a6c3?w=600&h=450&fit=crop&q=90",
        price: "₹19,000",
        period: "/month",
        title: "Anna Nagar, Chennai",
        beds: 3,
        baths: 2,
        sqft: "1,650 sq ft",
        tag: null,
    },
    {
        image: "https://images.unsplash.com/photo-1600585154526-990dced4db0d?w=600&h=450&fit=crop&q=90",
        price: "₹28,000",
        period: "/month",
        title: "Gachibowli, Hyderabad",
        beds: 4,
        baths: 2,
        sqft: "1,850 sq ft",
        tag: "Hot",
    },
];
---

<section class="properties section" id="listings">
    <div class="container">
        <!-- Section Header -->
        <div class="properties-header" data-animate="fade-up">
            <div class="header-left">
                <span class="section-label">Featured Listings</span>
                <h2 class="section-title">Find Your Perfect Space</h2>
                <p class="section-subtitle">
                    Homes people are exploring right now
                </p>
            </div>
            <a
                href="/properties"
                class="btn btn-outline"
                data-animate="fade-left"
                data-delay="1"
            >
                View All Properties
                <svg
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                >
                    <path d="M5 12h14M12 5l7 7-7 7"></path>
                </svg>
            </a>
        </div>

        <!-- Properties Grid -->
        <div class="properties-grid">
            {
                listings.map((listing, i) => (
                    <article
                        class="property-card"
                        data-animate="fade-up"
                        data-delay={i + 1}
                    >
                        <div class="property-image">
                            <img
                                src={listing.image}
                                alt={listing.title}
                                loading="lazy"
                            />

                            {/* Floating Price Tag */}
                            <div class="price-badge">
                                <span class="price">{listing.price}</span>
                                <span class="period">{listing.period}</span>
                            </div>

                            {/* Tag */}
                            {listing.tag && (
                                <span class="property-tag">{listing.tag}</span>
                            )}

                            {/* Favorite Button */}
                            <button
                                class="favorite-btn"
                                aria-label="Add to favorites"
                            >
                                <svg
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" />
                                </svg>
                            </button>

                            {/* Quick View Overlay - NEW! */}
                            <div class="quick-view-overlay">
                                <button class="quick-view-btn">
                                    <svg
                                        width="18"
                                        height="18"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
                                        <circle cx="12" cy="12" r="3" />
                                    </svg>
                                    Quick View
                                </button>
                                <button class="schedule-btn">
                                    Schedule Tour
                                </button>
                            </div>
                        </div>

                        <div class="property-content">
                            <h3 class="property-title">{listing.title}</h3>

                            <div class="property-meta">
                                <span class="meta-item">
                                    <svg
                                        width="16"
                                        height="16"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="1.5"
                                    >
                                        <path d="M3 12h18M3 6h18M3 18h18" />
                                    </svg>
                                    {listing.beds} Beds
                                </span>
                                <span class="meta-item">
                                    <svg
                                        width="16"
                                        height="16"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="1.5"
                                    >
                                        <path d="M9 6h11M9 12h11M9 18h11M5 6v.01M5 12v.01M5 18v.01" />
                                    </svg>
                                    {listing.baths} Baths
                                </span>
                                <span class="meta-item">
                                    <svg
                                        width="16"
                                        height="16"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="1.5"
                                    >
                                        <rect
                                            x="3"
                                            y="3"
                                            width="18"
                                            height="18"
                                            rx="2"
                                        />
                                    </svg>
                                    {listing.sqft}
                                </span>
                            </div>
                        </div>
                    </article>
                ))
            }
        </div>

        <!-- See More Button -->
        <div class="see-more" data-animate="fade-up">
            <a href="/properties" class="btn btn-lime">
                Explore All Properties
                <svg
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                >
                    <path d="M5 12h14M12 5l7 7-7 7"></path>
                </svg>
            </a>
        </div>
    </div>
</section>

<style>
    .properties {
        background: var(--bg-secondary);
    }

    /* Header */
    .properties-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        margin-bottom: 48px;
        flex-wrap: wrap;
        gap: 24px;
    }

    .header-left {
        flex: 1;
    }

    .section-label {
        display: inline-block;
        font-family: var(--font-display);
        font-size: var(--text-sm);
        font-weight: 600;
        color: var(--accent);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 12px;
        padding: 6px 14px;
        background: var(--color-lime-glow);
        border-radius: var(--radius-full);
    }

    .properties .section-title {
        margin-bottom: 8px;
    }

    .properties .section-subtitle {
        text-align: left;
        margin: 0;
    }

    /* Grid */
    .properties-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 28px;
        margin-bottom: 48px;
    }

    /* Card */
    .property-card {
        background: var(--color-white);
        border-radius: var(--radius-xl);
        overflow: hidden;
        box-shadow: var(--shadow-sm);
        transition: all 0.4s var(--ease-spring);
    }

    .property-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-xl);
    }

    .property-card:hover .property-image img {
        transform: scale(1.08);
    }

    /* Image */
    .property-image {
        position: relative;
        aspect-ratio: 4/3;
        overflow: hidden;
    }

    .property-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s var(--ease-out);
    }

    /* Price Badge */
    .price-badge {
        position: absolute;
        bottom: 16px;
        left: 16px;
        display: flex;
        align-items: baseline;
        gap: 4px;
        padding: 10px 16px;
        background: var(--accent);
        border-radius: var(--radius-full);
        box-shadow: var(--shadow-md);
    }

    .price {
        font-family: var(--font-display);
        font-size: var(--text-lg);
        font-weight: 700;
        color: var(--color-dark);
    }

    .period {
        font-size: var(--text-sm);
        color: rgba(0, 0, 0, 0.6);
    }

    /* Property Tag */
    .property-tag {
        position: absolute;
        top: 16px;
        left: 16px;
        padding: 6px 14px;
        background: var(--color-dark);
        color: var(--text-inverse);
        border-radius: var(--radius-full);
        font-family: var(--font-display);
        font-size: var(--text-xs);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    /* Favorite Button */
    .favorite-btn {
        position: absolute;
        top: 16px;
        right: 16px;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--color-white);
        border-radius: 50%;
        color: var(--text-secondary);
        box-shadow: var(--shadow-md);
        transition: all 0.3s var(--ease-out);
        z-index: 5;
    }

    .favorite-btn:hover {
        color: #ef4444;
        transform: scale(1.1);
    }

    /* Quick View Overlay - NEW! */
    .quick-view-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        display: flex;
        flex-direction: column;
        gap: 8px;
        padding: 16px;
        background: linear-gradient(
            0deg,
            rgba(0, 0, 0, 0.8) 0%,
            transparent 100%
        );
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.4s var(--ease-out);
        z-index: 4;
    }

    .property-card:hover .quick-view-overlay {
        opacity: 1;
        transform: translateY(0);
    }

    .quick-view-btn,
    .schedule-btn {
        padding: 10px 16px;
        border-radius: var(--radius-full);
        font-family: var(--font-display);
        font-size: var(--text-sm);
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        transition: all 0.3s var(--ease-out);
    }

    .quick-view-btn {
        background: var(--color-white);
        color: var(--text-primary);
    }

    .quick-view-btn:hover {
        background: var(--accent);
        color: var(--color-dark);
    }

    .schedule-btn {
        background: var(--accent);
        color: var(--color-dark);
    }

    .schedule-btn:hover {
        background: var(--accent-hover);
        transform: scale(1.02);
    }

    /* Content */
    .property-content {
        padding: 20px;
    }

    .property-title {
        font-family: var(--font-display);
        font-size: var(--text-lg);
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 12px;
    }

    .property-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
    }

    .meta-item {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-size: var(--text-sm);
        color: var(--text-muted);
    }

    .meta-item svg {
        color: var(--color-gray);
    }

    /* See More */
    .see-more {
        display: flex;
        justify-content: center;
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .properties-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .properties-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .properties-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
