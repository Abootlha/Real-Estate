---
import { Icon } from "astro-icon/components";

const properties = [
    {
        id: 1,
        title: "Modern 2BHK in Indiranagar",
        location: "Indiranagar, Bangalore",
        price: "₹18,000",
        type: "Private Room",
        image: "https://images.unsplash.com/photo-1522708323590-d24dbb6b0267?w=800&q=90",
        roommates: [
            "https://images.unsplash.com/photo-1534528741775-53994a69daeb?w=64&h=64&fit=crop&crop=faces",
            "https://images.unsplash.com/photo-1506794778202-cad84cf45f1d?w=64&h=64&fit=crop&crop=faces",
        ],
    },
    {
        id: 2,
        title: "Sunny Room in Koramangala",
        location: "Koramangala 4th Block",
        price: "₹12,500",
        type: "Shared Room",
        image: "https://images.unsplash.com/photo-1598928506311-c55ded91a20c?w=800&q=90",
        roommates: [
            "https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=64&h=64&fit=crop&crop=faces",
        ],
    },
    {
        id: 3,
        title: "Luxury Apartment HSR Layout",
        location: "HSR Layout, Bangalore",
        price: "₹22,000",
        type: "Private Room",
        image: "https://images.unsplash.com/photo-1502672260266-1c1ef2d93688?w=800&q=90",
        roommates: [
            "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=64&h=64&fit=crop&crop=faces",
            "https://images.unsplash.com/photo-1524504388940-b1c1722653e1?w=64&h=64&fit=crop&crop=faces",
        ],
    },
];
---

<section class="properties section section-gray">
    <div class="container">
        <div class="section-header-row">
            <div class="header-content">
                <h2 class="section-title">Explore trending rooms</h2>
                <p class="section-subtitle">
                    Handpicked homes with verified roommates
                </p>
            </div>
            <a href="/properties" class="btn btn-outline">View All Listings</a>
        </div>

        <div class="properties-grid">
            {
                properties.map((prop, i) => (
                    <div
                        class="property-card"
                        data-animate="fade-up"
                        data-delay={i + 1}
                    >
                        <div class="card-image-wrapper">
                            <img
                                src={prop.image}
                                alt={prop.title}
                                class="card-image"
                            />
                            <button
                                class="wishlist-btn"
                                aria-label="Add to wishlist"
                            >
                                <Icon name="ph:heart-bold" size={20} />
                            </button>
                            <div class="price-badge">
                                {prop.price}
                                <span class="period">/mo</span>
                            </div>
                        </div>

                        <div class="card-content">
                            <div class="card-meta">
                                <span class="room-type">{prop.type}</span>
                            </div>
                            <h3 class="card-title">{prop.title}</h3>
                            <p class="card-location">
                                <span class="icon text-pink">
                                    <Icon name="ph:map-pin-fill" />
                                </span>
                                {prop.location}
                            </p>

                            <div class="card-footer">
                                <div class="roommates-preview">
                                    <span class="label">Roommates:</span>
                                    <div class="avatars">
                                        {prop.roommates.map((img) => (
                                            <img src={img} alt="Roommate" />
                                        ))}
                                    </div>
                                </div>
                                <a
                                    href={`/property/${prop.id}`}
                                    class="btn-link"
                                >
                                    Details →
                                </a>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .section-header-row {
        display: flex;
        align-items: end;
        justify-content: space-between;
        margin-bottom: 60px;
        gap: 20px;
    }

    .section-title {
        margin-bottom: 8px;
        font-size: 2.5rem;
    }

    .properties-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 32px;
    }

    .property-card {
        background: var(--color-white);
        border-radius: 24px;
        overflow: hidden;
        transition:
            transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1),
            box-shadow 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
        border: 1px solid rgba(0, 0, 0, 0.04);
    }

    .property-card:hover {
        transform: translateY(-12px);
        box-shadow: 0 24px 48px rgba(0, 0, 0, 0.12);
    }

    /* Image Area */
    .card-image-wrapper {
        position: relative;
        height: 240px;
        overflow: hidden;
    }

    .card-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .property-card:hover .card-image {
        transform: scale(1.05);
    }

    .wishlist-btn {
        position: absolute;
        top: 16px;
        right: 16px;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.9);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-pink-primary);
        transition: all 0.2s;
        backdrop-filter: blur(4px);
    }

    .wishlist-btn:hover {
        background: var(--color-pink-primary);
        color: white;
        transform: scale(1.1);
    }

    .price-badge {
        position: absolute;
        bottom: 16px;
        left: 16px;
        background: var(--color-darker);
        color: white;
        padding: 8px 16px;
        border-radius: 12px;
        font-weight: 700;
        font-family: var(--font-display);
        display: flex;
        align-items: baseline;
        gap: 4px;
    }

    .price-badge .period {
        font-size: 0.8em;
        font-weight: 400;
        opacity: 0.8;
    }

    /* Content Area */
    .card-content {
        padding: 24px;
    }

    .room-type {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-weight: 700;
        color: var(--color-pink-primary);
        background: rgba(255, 90, 95, 0.08);
        padding: 6px 12px;
        border-radius: 6px;
        display: inline-block;
        margin-bottom: 12px;
    }

    .card-title {
        font-size: 1.25rem;
        margin-bottom: 8px;
        font-weight: 700;
        color: var(--text-primary);
    }

    .card-location {
        font-size: 0.95rem;
        color: var(--text-secondary);
        display: flex;
        align-items: center;
        gap: 6px;
        margin-bottom: 20px;
    }

    .card-footer {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding-top: 20px;
        border-top: 1px solid var(--color-cloud);
    }

    .roommates-preview {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .roommates-preview .label {
        font-size: 0.75rem;
        color: var(--text-muted);
    }

    .avatars {
        display: flex;
    }

    .avatars img {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        border: 2px solid white;
        margin-left: -8px;
        object-fit: cover;
    }

    .avatars img:first-child {
        margin-left: 0;
    }

    .btn-link {
        font-size: 0.9rem;
        font-weight: 700;
        color: var(--text-primary);
        transition: gap 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 4px;
    }

    .btn-link:hover {
        gap: 8px;
        color: var(--color-pink-primary);
    }

    @media (max-width: 900px) {
        .properties-grid {
            grid-template-columns: 1fr;
        }

        .section-header-row {
            flex-direction: column;
            align-items: start;
        }
    }
</style>
