---
const listings = [
    {
        image: "https://images.unsplash.com/photo-1600596542815-ffad4c1539a9?w=600&h=450&fit=crop&q=90",
        price: "$3,000",
        period: "/month",
        title: "Andheri East, Mumbai",
        beds: 4,
        baths: 2,
        sqft: "1,850 sq ft",
    },
    {
        image: "https://images.unsplash.com/photo-1600585154340-be6161a56a0c?w=600&h=450&fit=crop&q=90",
        price: "$4,500",
        period: "/month",
        title: "Whitefield, Bangalore",
        beds: 4,
        baths: 2,
        sqft: "1,950 sq ft",
    },
    {
        image: "https://images.unsplash.com/photo-1600607687939-ce8a6c25118c?w=600&h=450&fit=crop&q=90",
        price: "$2,800",
        period: "/month",
        title: "Hinjewadi, Pune",
        beds: 4,
        baths: 2,
        sqft: "1,850 sq ft",
    },
    {
        image: "https://images.unsplash.com/photo-1613490493576-7fde63acd811?w=600&h=450&fit=crop&q=90",
        price: "$6,000",
        period: "/month",
        title: "Dwarka, Delhi",
        beds: 4,
        baths: 2,
        sqft: "1,950 sq ft",
    },
    {
        image: "https://images.unsplash.com/photo-1600566753190-17f0baa2a6c3?w=600&h=450&fit=crop&q=90",
        price: "$3,600",
        period: "/month",
        title: "Anna Nagar, Chennai",
        beds: 4,
        baths: 2,
        sqft: "1,950 sq ft",
    },
    {
        image: "https://images.unsplash.com/photo-1600585154526-990dced4db0d?w=600&h=450&fit=crop&q=90",
        price: "$5,200",
        period: "/month",
        title: "Gachibowli, Hyderabad",
        beds: 4,
        baths: 2,
        sqft: "1,850 sq ft",
    },
];
---

<section class="properties" id="listings">
    <div class="container">
        <div class="section-header">
            <div class="header-text">
                <h2 class="section-title">Featured Properties</h2>
                <p class="section-subtitle">
                    Homes people are exploring right now
                </p>
            </div>
            <a href="/properties" class="view-all-btn">
                View All Properties
                <svg
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                >
                    <path d="M5 12h14M12 5l7 7-7 7"></path>
                </svg>
            </a>
        </div>

        <div class="properties-grid">
            {
                listings.map((listing) => (
                    <article class="property-card">
                        <div class="property-image">
                            <img
                                src={listing.image}
                                alt={listing.title}
                                loading="lazy"
                            />
                        </div>

                        <div class="property-content">
                            <div class="property-price">
                                <span class="price">{listing.price}</span>
                                <span class="period">{listing.period}</span>
                            </div>

                            <h3 class="property-title">{listing.title}</h3>

                            <div class="property-meta">
                                <span class="meta-item">
                                    <svg
                                        width="16"
                                        height="16"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="1.5"
                                    >
                                        <path d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                                    </svg>
                                    {listing.beds} Beds
                                </span>
                                <span class="meta-item">
                                    <svg
                                        width="16"
                                        height="16"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="1.5"
                                    >
                                        <path d="M9 6h11M9 12h11M9 18h11M5 6v.01M5 12v.01M5 18v.01" />
                                    </svg>
                                    {listing.baths} Bathrooms
                                </span>
                                <span class="meta-item">
                                    <svg
                                        width="16"
                                        height="16"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="1.5"
                                    >
                                        <rect
                                            x="3"
                                            y="3"
                                            width="18"
                                            height="18"
                                            rx="2"
                                        />
                                    </svg>
                                    {listing.sqft}
                                </span>
                            </div>
                        </div>
                    </article>
                ))
            }
        </div>

        <!-- Pagination -->
        <div class="pagination">
            <button class="page-btn" aria-label="Previous">
                <svg
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                >
                    <path d="M15 18l-6-6 6-6"></path>
                </svg>
            </button>
            <span class="page-num">1</span>
            <span class="page-num active">2</span>
            <span class="page-num">3</span>
            <span class="page-dots">...</span>
            <span class="page-num">12</span>
            <button class="page-btn" aria-label="Next">
                <svg
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                >
                    <path d="M9 18l6-6-6-6"></path>
                </svg>
            </button>
        </div>
    </div>
</section>

<style>
    .properties {
        padding: 80px 0;
        background: #fff;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        margin-bottom: 40px;
    }

    .section-title {
        font-family: var(--font-display);
        font-size: 1.75rem;
        font-weight: 600;
        color: #0f172a;
        margin-bottom: 8px;
    }

    .section-subtitle {
        font-size: 0.95rem;
        color: #64748b;
    }

    .view-all-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        border: 1px solid #e2e8f0;
        border-radius: 100px;
        font-size: 0.9rem;
        font-weight: 500;
        color: #0f172a;
        transition: all 0.2s ease;
    }

    .view-all-btn:hover {
        border-color: #3b82f6;
        color: #3b82f6;
    }

    .properties-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 24px;
        margin-bottom: 48px;
    }

    .property-card {
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid #f1f5f9;
        transition: box-shadow 0.2s ease;
    }

    .property-card:hover {
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.06);
    }

    .property-image {
        aspect-ratio: 4/3;
        overflow: hidden;
    }

    .property-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .property-content {
        padding: 20px;
    }

    .property-price {
        margin-bottom: 8px;
    }

    .price {
        font-family: var(--font-display);
        font-size: 1.35rem;
        font-weight: 700;
        color: #0f172a;
    }

    .period {
        font-size: 0.9rem;
        color: #64748b;
    }

    .property-title {
        font-size: 1rem;
        font-weight: 500;
        color: #334155;
        margin-bottom: 16px;
    }

    .property-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
        padding-top: 16px;
        border-top: 1px solid #f1f5f9;
    }

    .meta-item {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-size: 0.85rem;
        color: #64748b;
    }

    .meta-item svg {
        color: #94a3b8;
    }

    /* Pagination */
    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 8px;
    }

    .page-btn {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        background: #f8fafc;
        color: #64748b;
        transition: all 0.2s ease;
    }

    .page-btn:hover {
        background: #3b82f6;
        color: white;
    }

    .page-num {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        font-size: 0.9rem;
        font-weight: 500;
        color: #64748b;
        cursor: pointer;
    }

    .page-num:hover {
        background: #f1f5f9;
    }

    .page-num.active {
        background: #3b82f6;
        color: white;
    }

    .page-dots {
        color: #94a3b8;
        padding: 0 4px;
    }

    @media (max-width: 1024px) {
        .properties-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .section-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 16px;
        }

        .properties-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
