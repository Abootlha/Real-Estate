---
const features = [
    {
        icon: "notification",
        title: "Instant Alerts",
        description:
            "Get notified the moment a property matching your criteria is listed",
    },
    {
        icon: "tour",
        title: "Virtual Tours",
        description: "Explore properties in 360¬∞ from the comfort of your home",
    },
    {
        icon: "chat",
        title: "Direct Chat",
        description: "Message owners and roommates directly through the app",
    },
    {
        icon: "save",
        title: "Save & Compare",
        description: "Shortlist properties and compare them side by side",
    },
];
---

<section class="section app-section">
    <div class="container">
        <div class="app-grid">
            <!-- Left Content -->
            <div class="app-content" data-animate="fade-right">
                <span class="section-eyebrow">Download App</span>
                <h2 class="app-title">
                    Your Home Search<br />
                    <em class="text-coral">In Your Pocket</em>
                </h2>
                <p class="app-desc">
                    Browse thousands of verified listings, connect with
                    roommates, and schedule visits ‚Äî all from our feature-packed
                    mobile app.
                </p>

                <div class="app-features">
                    {
                        features.map((feature) => (
                            <div class="app-feature">
                                <div class="feature-icon">
                                    {feature.icon === "notification" && (
                                        <svg
                                            width="20"
                                            height="20"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                        >
                                            <path d="M18 8A6 6 0 006 8c0 7-3 9-3 9h18s-3-2-3-9" />
                                            <path d="M13.73 21a2 2 0 01-3.46 0" />
                                        </svg>
                                    )}
                                    {feature.icon === "tour" && (
                                        <svg
                                            width="20"
                                            height="20"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                        >
                                            <circle cx="12" cy="12" r="10" />
                                            <path d="M14.31 8l5.74 9.94M9.69 8h11.48M7.38 12l5.74-9.94M9.69 16L3.95 6.06M14.31 16H2.83M16.62 12l-5.74 9.94" />
                                        </svg>
                                    )}
                                    {feature.icon === "chat" && (
                                        <svg
                                            width="20"
                                            height="20"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                        >
                                            <path d="M21 11.5a8.38 8.38 0 01-.9 3.8 8.5 8.5 0 01-7.6 4.7 8.38 8.38 0 01-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 01-.9-3.8 8.5 8.5 0 014.7-7.6 8.38 8.38 0 013.8-.9h.5a8.48 8.48 0 018 8v.5z" />
                                        </svg>
                                    )}
                                    {feature.icon === "save" && (
                                        <svg
                                            width="20"
                                            height="20"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                        >
                                            <path d="M19 21l-7-5-7 5V5a2 2 0 012-2h10a2 2 0 012 2z" />
                                        </svg>
                                    )}
                                </div>
                                <div>
                                    <span class="feature-title">
                                        {feature.title}
                                    </span>
                                    <span class="feature-desc">
                                        {feature.description}
                                    </span>
                                </div>
                            </div>
                        ))
                    }
                </div>

                <div class="app-download">
                    <div class="store-buttons">
                        <a href="#" class="store-btn">
                            <svg
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="currentColor"
                            >
                                <path
                                    d="M17.05 20.28c-.98.95-2.05.8-3.08.35-1.09-.46-2.09-.48-3.24 0-1.44.62-2.2.44-3.06-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"
                                ></path>
                            </svg>
                            <div>
                                <span class="store-label">Download on the</span>
                                <span class="store-name">App Store</span>
                            </div>
                        </a>
                        <a href="#" class="store-btn">
                            <svg
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="currentColor"
                            >
                                <path
                                    d="M3.609 1.814L13.792 12 3.61 22.186a.996.996 0 01-.61-.92V2.734a1 1 0 01.609-.92zm10.89 10.893l2.302 2.302-10.937 6.333 8.635-8.635zm3.199-3.198l2.807 1.626a1 1 0 010 1.73l-2.808 1.626L15.206 12l2.492-2.491zM5.864 2.658L16.8 8.99l-2.302 2.302-8.634-8.634z"
                                ></path>
                            </svg>
                            <div>
                                <span class="store-label">Get it on</span>
                                <span class="store-name">Google Play</span>
                            </div>
                        </a>
                    </div>
                    <div class="qr-code">
                        <div class="qr-placeholder">
                            <svg
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <rect x="3" y="3" width="7" height="7"></rect>
                                <rect x="14" y="3" width="7" height="7"></rect>
                                <rect x="14" y="14" width="7" height="7"></rect>
                                <rect x="3" y="14" width="7" height="7"></rect>
                            </svg>
                        </div>
                        <span class="qr-label">Scan to Download</span>
                    </div>
                </div>
            </div>

            <!-- Right - Phone Mockup -->
            <div class="app-mockup" data-animate="fade-left">
                <div class="phone-frame">
                    <div class="phone-screen">
                        <div class="screen-header">
                            <div class="screen-logo">
                                <div class="mini-logo">üè†</div>
                                <span>HomeDaze</span>
                            </div>
                            <div class="screen-icons">
                                <span class="icon-dot"></span>
                                <span class="icon-dot"></span>
                            </div>
                        </div>
                        <div class="screen-search">
                            <svg
                                width="14"
                                height="14"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <circle cx="11" cy="11" r="8"></circle>
                                <path d="M21 21l-4.35-4.35"></path>
                            </svg>
                            <span>Search in Mumbai...</span>
                        </div>
                        <div class="screen-cards">
                            <div class="screen-card">
                                <div class="card-img"></div>
                                <div class="card-info">
                                    <span class="card-price">‚Çπ45,000/mo</span>
                                    <span class="card-title"
                                        >3 BHK Apartment</span
                                    >
                                    <span class="card-loc">Bandra West</span>
                                </div>
                            </div>
                            <div class="screen-card">
                                <div class="card-img"></div>
                                <div class="card-info">
                                    <span class="card-price">‚Çπ32,000/mo</span>
                                    <span class="card-title">2 BHK Flat</span>
                                    <span class="card-loc">Andheri</span>
                                </div>
                            </div>
                        </div>
                        <div class="screen-nav">
                            <div class="nav-item active">üè†</div>
                            <div class="nav-item">üîç</div>
                            <div class="nav-item">‚ù§Ô∏è</div>
                            <div class="nav-item">üë§</div>
                        </div>
                    </div>
                </div>

                <!-- Floating elements -->
                <div class="float-badge badge-1">
                    <span class="badge-icon">‚úì</span>
                    <span>Verified</span>
                </div>
                <div class="float-badge badge-2">
                    <span class="badge-count">3</span>
                    <span>New matches!</span>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .app-section {
        background: linear-gradient(
            180deg,
            var(--bg-primary) 0%,
            var(--bg-secondary) 100%
        );
        overflow: hidden;
    }

    .app-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 80px;
        align-items: center;
    }

    .section-eyebrow {
        display: inline-block;
        font-size: var(--text-sm);
        font-weight: 600;
        color: var(--accent);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 16px;
    }

    .app-title {
        font-family: var(--font-display);
        font-size: clamp(2rem, 4vw, var(--text-5xl));
        font-weight: 400;
        color: var(--text-primary);
        line-height: 1.1;
        margin-bottom: 20px;
    }

    .app-title em {
        font-style: italic;
    }

    .app-desc {
        font-size: var(--text-lg);
        color: var(--text-secondary);
        line-height: 1.7;
        margin-bottom: 32px;
        max-width: 480px;
    }

    /* App Features */
    .app-features {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin-bottom: 40px;
    }

    .app-feature {
        display: flex;
        gap: 14px;
        align-items: flex-start;
    }

    .app-feature .feature-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--color-coral-subtle);
        border-radius: var(--radius-md);
        color: var(--accent);
        flex-shrink: 0;
    }

    .app-feature .feature-title {
        display: block;
        font-size: var(--text-sm);
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 2px;
    }

    .app-feature .feature-desc {
        display: block;
        font-size: var(--text-xs);
        color: var(--text-muted);
        line-height: 1.5;
    }

    /* Download Section */
    .app-download {
        display: flex;
        align-items: center;
        gap: 32px;
    }

    .store-buttons {
        display: flex;
        gap: 12px;
    }

    .store-btn {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 20px;
        background: var(--bg-elevated);
        border: 1px solid var(--glass-border);
        border-radius: var(--radius-lg);
        transition: all 0.3s var(--ease-out);
    }

    .store-btn:hover {
        border-color: var(--accent);
        transform: translateY(-2px);
    }

    .store-btn svg {
        color: var(--text-primary);
    }

    .store-label {
        display: block;
        font-size: 10px;
        color: var(--text-muted);
    }

    .store-name {
        display: block;
        font-size: var(--text-sm);
        font-weight: 600;
        color: var(--text-primary);
    }

    .qr-code {
        text-align: center;
    }

    .qr-placeholder {
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--text-primary);
        border-radius: var(--radius-md);
        color: var(--bg-primary);
        margin-bottom: 8px;
    }

    .qr-label {
        font-size: var(--text-xs);
        color: var(--text-muted);
    }

    /* Phone Mockup */
    .app-mockup {
        position: relative;
        display: flex;
        justify-content: center;
    }

    .phone-frame {
        position: relative;
        width: 280px;
        height: 560px;
        background: linear-gradient(
            135deg,
            var(--color-graphite) 0%,
            var(--color-obsidian) 100%
        );
        border-radius: 40px;
        padding: 12px;
        box-shadow:
            0 50px 100px rgba(0, 0, 0, 0.5),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);
    }

    .phone-screen {
        width: 100%;
        height: 100%;
        background: var(--bg-secondary);
        border-radius: 30px;
        overflow: hidden;
        display: flex;
        flex-direction: column;
    }

    .screen-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 16px 12px;
        background: var(--bg-primary);
    }

    .screen-logo {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .mini-logo {
        font-size: 16px;
    }

    .screen-logo span {
        font-size: 14px;
        font-weight: 600;
        color: var(--text-primary);
    }

    .screen-icons {
        display: flex;
        gap: 6px;
    }

    .icon-dot {
        width: 8px;
        height: 8px;
        background: var(--text-muted);
        border-radius: 50%;
    }

    .screen-search {
        display: flex;
        align-items: center;
        gap: 8px;
        margin: 12px 12px 16px;
        padding: 10px 14px;
        background: var(--bg-elevated);
        border-radius: 12px;
        font-size: 12px;
        color: var(--text-muted);
    }

    .screen-cards {
        flex: 1;
        padding: 0 12px;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .screen-card {
        display: flex;
        gap: 10px;
        padding: 10px;
        background: var(--bg-elevated);
        border-radius: 12px;
    }

    .card-img {
        width: 70px;
        height: 70px;
        background: linear-gradient(
            135deg,
            var(--color-coral-subtle) 0%,
            var(--color-coral-glow) 100%
        );
        border-radius: 10px;
    }

    .card-info {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .card-price {
        font-size: 14px;
        font-weight: 700;
        color: var(--accent);
    }

    .card-title {
        font-size: 12px;
        font-weight: 500;
        color: var(--text-primary);
    }

    .card-loc {
        font-size: 11px;
        color: var(--text-muted);
    }

    .screen-nav {
        display: flex;
        justify-content: space-around;
        padding: 14px 0;
        background: var(--bg-primary);
        border-top: 1px solid var(--glass-border);
    }

    .screen-nav .nav-item {
        font-size: 18px;
        opacity: 0.5;
    }

    .screen-nav .nav-item.active {
        opacity: 1;
    }

    /* Floating Badges */
    .float-badge {
        position: absolute;
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 10px 16px;
        background: var(--bg-secondary);
        border: 1px solid var(--glass-border);
        border-radius: var(--radius-full);
        font-size: var(--text-sm);
        font-weight: 500;
        color: var(--text-primary);
        box-shadow: var(--shadow-lg);
        animation: float 4s ease-in-out infinite;
    }

    .badge-1 {
        top: 20%;
        left: -20px;
    }

    .badge-2 {
        bottom: 25%;
        right: -30px;
        animation-delay: 1s;
    }

    .badge-icon {
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--color-success);
        color: var(--text-inverse);
        border-radius: 50%;
        font-size: 12px;
    }

    .badge-count {
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--accent);
        color: var(--text-inverse);
        border-radius: 50%;
        font-size: 12px;
        font-weight: 700;
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .app-grid {
            grid-template-columns: 1fr;
            gap: 60px;
        }

        .app-content {
            text-align: center;
        }

        .app-desc {
            margin-left: auto;
            margin-right: auto;
        }

        .app-features {
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
        }

        .app-download {
            justify-content: center;
        }
    }

    @media (max-width: 768px) {
        .app-features {
            grid-template-columns: 1fr;
        }

        .app-download {
            flex-direction: column;
            gap: 24px;
        }

        .store-buttons {
            flex-direction: column;
            width: 100%;
            max-width: 240px;
        }

        .store-btn {
            justify-content: center;
        }

        .phone-frame {
            width: 240px;
            height: 480px;
        }

        .float-badge {
            display: none;
        }
    }
</style>
