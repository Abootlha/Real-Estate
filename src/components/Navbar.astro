<script>
    // Magic glow cursor effect
    document.addEventListener("DOMContentLoaded", () => {
        const dropdown = document.getElementById("magic-dropdown");
        if (!dropdown) return;

        const magicGlow = dropdown.querySelector(
            ".magic-glow",
        ) as HTMLElement | null;
        let sparkleTimer = 0;

        dropdown.addEventListener("mousemove", (e: MouseEvent) => {
            const rect = dropdown.getBoundingClientRect();
            const x = e.clientX - rect.left - 75; // Center the glow
            const y = e.clientY - rect.top - 75;

            // Move the glow
            if (magicGlow) {
                magicGlow.style.left = x + "px";
                magicGlow.style.top = y + "px";
            }

            // Create sparkles periodically
            sparkleTimer++;
            if (sparkleTimer % 3 === 0) {
                createSparkle(
                    dropdown,
                    e.clientX - rect.left,
                    e.clientY - rect.top,
                );
            }
        });

        function createSparkle(
            parent: HTMLElement,
            x: number,
            y: number,
        ): void {
            const sparkle = document.createElement("span");
            sparkle.className = "sparkle";
            sparkle.style.left = x + (Math.random() - 0.5) * 20 + "px";
            sparkle.style.top = y + (Math.random() - 0.5) * 20 + "px";
            sparkle.style.fontSize = 8 + Math.random() * 8 + "px";
            parent.appendChild(sparkle);

            // Remove sparkle after animation
            setTimeout(() => sparkle.remove(), 800);
        }
    });
</script>

