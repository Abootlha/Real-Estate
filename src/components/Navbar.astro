---
interface Props {
    transparent?: boolean;
}

const { transparent = false } = Astro.props;
---

<nav class={`navbar ${transparent ? "navbar-transparent" : "navbar-light"}`}>
    <div class="container">
        <div class="nav-inner">
            <!-- Logo -->
            <a href="/" class="logo">
                <span class="logo-text"
                    >roomie<span class="logo-accent">match</span></span
                >
                <div class="logo-dot"></div>
            </a>

            <!-- Nav Links -->
            <div class="nav-links">
                <a href="/" class="nav-link active">Home</a>
                <a href="/properties" class="nav-link">Find Rooms</a>
                <a href="/cities" class="nav-link">Cities</a>
                <a href="/about" class="nav-link">About Us</a>
            </div>

            <!-- Nav Actions -->
            <div class="nav-actions">
                <a href="/login" class="nav-link">Log in</a>
                <a href="/signup" class="btn btn-primary btn-sm">Sign Up</a>

                <button class="mobile-toggle" aria-label="Menu">
                    <span></span>
                    <span></span>
                </button>
            </div>
        </div>
    </div>
</nav>

<style>
    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        padding: 24px 0;
        transition: all 0.4s var(--ease-out);
    }

    .navbar-light {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(20px);
        border-bottom: 1px solid rgba(0, 0, 0, 0.03);
    }

    .navbar-transparent {
        background: transparent;
    }

    .navbar.scrolled {
        padding: 16px 0;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        box-shadow: var(--shadow-sm);
    }

    .nav-inner {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    /* Logo */
    .logo {
        display: flex;
        align-items: baseline;
        gap: 2px;
        text-decoration: none;
    }

    .logo-text {
        font-family: var(--font-display);
        font-size: 24px;
        font-weight: 800;
        color: var(--text-primary);
        letter-spacing: -0.03em;
    }

    .logo-accent {
        color: var(--color-pink-primary);
    }

    .logo-dot {
        width: 6px;
        height: 6px;
        background: var(--color-pink-primary);
        border-radius: 50%;
        margin-left: 2px;
    }

    /* Nav Links */
    .nav-links {
        display: flex;
        align-items: center;
        gap: 32px;
        background: var(--color-white);
        padding: 8px 32px;
        border-radius: var(--radius-full);
        box-shadow: var(--shadow-sm);
        border: 1px solid rgba(0, 0, 0, 0.03);
    }

    .nav-link {
        font-family: var(--font-display);
        font-size: 15px;
        font-weight: 600;
        color: var(--text-secondary);
        transition: color 0.3s ease;
    }

    .nav-link:hover,
    .nav-link.active {
        color: var(--color-pink-primary);
    }

    /* Actions */
    .nav-actions {
        display: flex;
        align-items: center;
        gap: 24px;
    }

    .btn-sm {
        padding: 12px 24px;
        font-size: 14px;
        box-shadow: 0 4px 14px rgba(255, 90, 95, 0.3);
    }

    /* Mobile Toggle */
    .mobile-toggle {
        display: none;
        flex-direction: column;
        gap: 6px;
        width: 32px;
        cursor: pointer;
    }

    .mobile-toggle span {
        display: block;
        width: 100%;
        height: 2px;
        background: var(--text-primary);
        border-radius: 2px;
        transition: 0.3s;
    }

    @media (max-width: 1024px) {
        .nav-links {
            display: none;
        }
        .mobile-toggle {
            display: flex;
        }
    }
</style>

<script>
    const navbar = document.querySelector(".navbar");
    window.addEventListener("scroll", () => {
        if (window.scrollY > 20) {
            navbar?.classList.add("scrolled");
        } else {
            navbar?.classList.remove("scrolled");
        }
    });
</script>
