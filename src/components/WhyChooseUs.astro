---
const features = [
    {
        icon: "verified",
        title: "100% Verified Listings",
        description:
            "Every property is personally verified by our team. No fake listings, guaranteed.",
        stat: "15,000+",
        statLabel: "Verified Properties",
    },
    {
        icon: "zero",
        title: "Zero Brokerage",
        description:
            "Connect directly with owners. Save up to ₹50,000 on brokerage fees.",
        stat: "₹500Cr+",
        statLabel: "Saved by Users",
    },
    {
        icon: "instant",
        title: "Instant Booking",
        description:
            "Book your visit or move-in instantly. No waiting, no hassle.",
        stat: "24hrs",
        statLabel: "Avg. Move-in Time",
    },
    {
        icon: "support",
        title: "24/7 Support",
        description:
            "Our dedicated team is always ready to help you find your perfect home.",
        stat: "98%",
        statLabel: "Happy Customers",
    },
];
---

<section class="section why-section">
    <div class="container">
        <div class="section-header" data-animate="fade-up">
            <span class="section-eyebrow">Why Choose Us</span>
            <h2 class="section-title">
                The <em class="text-coral">Smarter</em> Way to Find Home
            </h2>
            <p class="section-subtitle">
                We're not just another property platform. We're your trusted
                partner in finding the perfect space.
            </p>
        </div>

        <div class="features-bento">
            {
                features.map((feature, index) => (
                    <div
                        class={`feature-card ${index === 0 ? "featured" : ""}`}
                        data-animate="scale-up"
                        data-delay={index + 1}
                    >
                        <div class="feature-icon">
                            {feature.icon === "verified" && (
                                <svg
                                    width="32"
                                    height="32"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <path d="M22 11.08V12a10 10 0 11-5.93-9.14" />
                                    <polyline points="22 4 12 14.01 9 11.01" />
                                </svg>
                            )}
                            {feature.icon === "zero" && (
                                <svg
                                    width="32"
                                    height="32"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <line x1="12" y1="1" x2="12" y2="23" />
                                    <path d="M17 5H9.5a3.5 3.5 0 000 7h5a3.5 3.5 0 010 7H6" />
                                </svg>
                            )}
                            {feature.icon === "instant" && (
                                <svg
                                    width="32"
                                    height="32"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2" />
                                </svg>
                            )}
                            {feature.icon === "support" && (
                                <svg
                                    width="32"
                                    height="32"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <path d="M21 11.5a8.38 8.38 0 01-.9 3.8 8.5 8.5 0 01-7.6 4.7 8.38 8.38 0 01-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 01-.9-3.8 8.5 8.5 0 014.7-7.6 8.38 8.38 0 013.8-.9h.5a8.48 8.48 0 018 8v.5z" />
                                </svg>
                            )}
                        </div>
                        <div class="feature-content">
                            <h3 class="feature-title">{feature.title}</h3>
                            <p class="feature-desc">{feature.description}</p>
                        </div>
                        <div class="feature-stat">
                            <span class="stat-value">{feature.stat}</span>
                            <span class="stat-label">{feature.statLabel}</span>
                        </div>
                    </div>
                ))
            }
        </div>

        <div class="comparison-strip" data-animate="fade-up">
            <div class="comparison-item">
                <div class="comp-icon bad">
                    <svg
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                    >
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </div>
                <div class="comp-text">
                    <span class="comp-label">Traditional Brokers</span>
                    <span class="comp-value">2 months rent as brokerage</span>
                </div>
            </div>
            <div class="comparison-vs">VS</div>
            <div class="comparison-item highlight">
                <div class="comp-icon good">
                    <svg
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                    >
                        <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                </div>
                <div class="comp-text">
                    <span class="comp-label">HomeDaze</span>
                    <span class="comp-value"
                        >₹0 Brokerage, Direct Owner Connect</span
                    >
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .why-section {
        background: var(--bg-primary);
    }

    .section-header {
        text-align: center;
        margin-bottom: 60px;
    }

    .section-eyebrow {
        display: inline-block;
        font-size: var(--text-sm);
        font-weight: 600;
        color: var(--accent);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 16px;
    }

    .section-title {
        font-family: var(--font-display);
        font-size: clamp(2rem, 4vw, var(--text-5xl));
        font-style: italic;
        color: var(--text-primary);
        margin-bottom: 16px;
        line-height: 1.1;
    }

    .section-subtitle {
        font-size: var(--text-lg);
        color: var(--text-secondary);
        max-width: 560px;
        margin: 0 auto;
        line-height: 1.6;
    }

    /* Bento Grid */
    .features-bento {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        margin-bottom: 60px;
    }

    .feature-card {
        background: var(--bg-secondary);
        border: 1px solid var(--glass-border);
        border-radius: var(--radius-xl);
        padding: 28px;
        display: flex;
        flex-direction: column;
        gap: 20px;
        transition: all 0.4s var(--ease-out);
    }

    .feature-card:hover {
        transform: translateY(-6px);
        border-color: var(--accent);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    .feature-card.featured {
        grid-column: span 2;
        grid-row: span 2;
        padding: 40px;
    }

    .feature-icon {
        width: 56px;
        height: 56px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--color-coral-subtle);
        border-radius: var(--radius-lg);
        color: var(--accent);
    }

    .feature-card.featured .feature-icon {
        width: 72px;
        height: 72px;
    }

    .feature-card.featured .feature-icon svg {
        width: 40px;
        height: 40px;
    }

    .feature-title {
        font-family: var(--font-body);
        font-size: var(--text-lg);
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 8px;
    }

    .feature-card.featured .feature-title {
        font-size: var(--text-2xl);
    }

    .feature-desc {
        font-size: var(--text-sm);
        color: var(--text-secondary);
        line-height: 1.6;
    }

    .feature-card.featured .feature-desc {
        font-size: var(--text-base);
    }

    .feature-stat {
        margin-top: auto;
        padding-top: 20px;
        border-top: 1px solid var(--glass-border);
    }

    .stat-value {
        display: block;
        font-family: var(--font-display);
        font-size: var(--text-2xl);
        font-style: italic;
        color: var(--accent);
        line-height: 1;
        margin-bottom: 4px;
    }

    .feature-card.featured .stat-value {
        font-size: var(--text-4xl);
    }

    .stat-label {
        font-size: var(--text-xs);
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    /* Comparison Strip */
    .comparison-strip {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 24px;
        padding: 24px 40px;
        background: var(--bg-secondary);
        border: 1px solid var(--glass-border);
        border-radius: var(--radius-2xl);
    }

    .comparison-item {
        display: flex;
        align-items: center;
        gap: 16px;
        flex: 1;
        max-width: 360px;
    }

    .comparison-item.highlight {
        padding: 16px 24px;
        background: var(--color-coral-subtle);
        border: 1px solid rgba(255, 107, 90, 0.2);
        border-radius: var(--radius-xl);
    }

    .comp-icon {
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
    }

    .comp-icon.bad {
        background: rgba(248, 113, 113, 0.1);
        color: var(--color-error);
    }

    .comp-icon.good {
        background: rgba(74, 222, 128, 0.1);
        color: var(--color-success);
    }

    .comp-label {
        display: block;
        font-size: var(--text-sm);
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 2px;
    }

    .comp-value {
        font-size: var(--text-sm);
        color: var(--text-secondary);
    }

    .comparison-vs {
        font-size: var(--text-sm);
        font-weight: 700;
        color: var(--text-muted);
        background: var(--bg-elevated);
        padding: 8px 16px;
        border-radius: var(--radius-full);
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .features-bento {
            grid-template-columns: repeat(2, 1fr);
        }

        .feature-card.featured {
            grid-column: span 2;
            grid-row: span 1;
        }
    }

    @media (max-width: 768px) {
        .features-bento {
            grid-template-columns: 1fr;
        }

        .feature-card.featured {
            grid-column: span 1;
        }

        .comparison-strip {
            flex-direction: column;
            gap: 16px;
            padding: 24px;
        }

        .comparison-item {
            max-width: 100%;
            width: 100%;
        }
    }
</style>
