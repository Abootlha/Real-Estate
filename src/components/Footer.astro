<style>
    .footer {
        background: #f8fafc;
        padding: 80px 0 32px;
    }

    .footer-grid {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1.5fr;
        gap: 48px;
        margin-bottom: 48px;
    }

    .footer-logo span {
        font-family: var(--font-display);
        font-size: 1.5rem;
        font-weight: 600;
        color: #0f172a;
    }

    .footer-tagline {
        margin-top: 16px;
        font-size: 0.95rem;
        color: #64748b;
        line-height: 1.6;
    }

    .footer-social {
        display: flex;
        gap: 16px;
        margin-top: 24px;
    }

    .footer-social a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: white;
        color: #64748b;
        border: 1px solid #e2e8f0;
        transition: all 0.2s ease;
    }

    .footer-social a:hover {
        background: #3b82f6;
        color: white;
        border-color: #3b82f6;
    }

    .footer-links h4 {
        font-size: 1rem;
        font-weight: 600;
        color: #0f172a;
        margin-bottom: 20px;
    }

    .footer-links ul {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .footer-links a {
        display: flex;
        align-items: flex-start;
        gap: 8px;
        font-size: 0.9rem;
        color: #64748b;
        transition: color 0.2s ease;
        line-height: 1.5;
    }

    .footer-links a:hover {
        color: #3b82f6;
    }

    .footer-links a svg {
        flex-shrink: 0;
        margin-top: 2px;
    }

    .footer-bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 32px;
        border-top: 1px solid #e2e8f0;
    }

    .footer-bottom p {
        font-size: 0.9rem;
        color: #94a3b8;
    }

    .footer-legal a {
        font-size: 0.9rem;
        color: #64748b;
        transition: color 0.2s ease;
    }

    .footer-legal a:hover {
        color: #3b82f6;
    }

    @media (max-width: 900px) {
        .footer-grid {
            grid-template-columns: 1fr 1fr;
        }
    }

    @media (max-width: 600px) {
        .footer-grid {
            grid-template-columns: 1fr;
            gap: 32px;
        }

        .footer-bottom {
            flex-direction: column;
            gap: 16px;
            text-align: center;
        }
    }
</style>
