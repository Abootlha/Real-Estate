---
const cityLinks = [
    { name: "Mumbai", href: "/city/mumbai" },
    { name: "Bangalore", href: "/city/bangalore" },
    { name: "Delhi NCR", href: "/city/delhi-ncr" },
    { name: "Hyderabad", href: "/city/hyderabad" },
    { name: "Pune", href: "/city/pune" },
    { name: "Chennai", href: "/city/chennai" },
    { name: "Kolkata", href: "/city/kolkata" },
    { name: "Ahmedabad", href: "/city/ahmedabad" },
];

const propertyLinks = [
    {
        name: "Apartments for Rent",
        href: "/properties?type=apartment&for=rent",
    },
    { name: "Houses for Sale", href: "/properties?type=house&for=sale" },
    { name: "Villas", href: "/properties?type=villa" },
    { name: "PG/Hostels", href: "/properties?type=pg" },
    { name: "Commercial Spaces", href: "/properties?type=commercial" },
    { name: "Flatmates", href: "/roommates" },
];

const companyLinks = [
    { name: "About Us", href: "/about" },
    { name: "Careers", href: "/careers" },
    { name: "Press", href: "/press" },
    { name: "Blog", href: "/blog" },
    { name: "Contact", href: "/contact" },
];

const supportLinks = [
    { name: "Help Center", href: "/help" },
    { name: "Safety Tips", href: "/safety" },
    { name: "Terms of Service", href: "/terms" },
    { name: "Privacy Policy", href: "/privacy" },
    { name: "Cookie Policy", href: "/cookies" },
];
---

<footer class="footer">
    <!-- Main Footer -->
    <div class="footer-main">
        <div class="container">
            <div class="footer-grid">
                <!-- Brand Column -->
                <div class="footer-brand">
                    <a href="/" class="logo">
                        <div class="logo-icon">
                            <svg
                                width="22"
                                height="22"
                                viewBox="0 0 24 24"
                                fill="none"
                            >
                                <path
                                    d="M12 2L2 7V10H22V7L12 2Z"
                                    fill="currentColor"></path>
                                <path
                                    d="M4 12V22H10V16H14V22H20V12H4Z"
                                    fill="currentColor"></path>
                            </svg>
                        </div>
                        <span class="logo-text"
                            >Home<span class="text-coral">Daze</span></span
                        >
                    </a>
                    <p class="brand-desc">
                        Your all-in-one platform for property discovery,
                        roommate matching, and seamless home finding across
                        India.
                    </p>

                    <!-- App Download -->
                    <div class="app-download">
                        <span class="app-label">Get the app</span>
                        <div class="app-buttons">
                            <a href="#" class="app-btn">
                                <svg
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="currentColor"
                                >
                                    <path
                                        d="M17.05 20.28c-.98.95-2.05.8-3.08.35-1.09-.46-2.09-.48-3.24 0-1.44.62-2.2.44-3.06-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"
                                    ></path>
                                </svg>
                            </a>
                            <a href="#" class="app-btn">
                                <svg
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="currentColor"
                                >
                                    <path
                                        d="M3.609 1.814L13.792 12 3.61 22.186a.996.996 0 01-.61-.92V2.734a1 1 0 01.609-.92zm10.89 10.893l2.302 2.302-10.937 6.333 8.635-8.635zm3.199-3.198l2.807 1.626a1 1 0 010 1.73l-2.808 1.626L15.206 12l2.492-2.491zM5.864 2.658L16.8 8.99l-2.302 2.302-8.634-8.634z"
                                    ></path>
                                </svg>
                            </a>
                        </div>
                    </div>

                    <!-- Social Links -->
                    <div class="social-links">
                        <a href="#" class="social-link" aria-label="Twitter/X">
                            <svg
                                width="18"
                                height="18"
                                viewBox="0 0 24 24"
                                fill="currentColor"
                            >
                                <path
                                    d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                                ></path>
                            </svg>
                        </a>
                        <a href="#" class="social-link" aria-label="Instagram">
                            <svg
                                width="18"
                                height="18"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <rect
                                    x="2"
                                    y="2"
                                    width="20"
                                    height="20"
                                    rx="5"
                                    ry="5"></rect>
                                <path
                                    d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
                                ></path>
                                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"
                                ></line>
                            </svg>
                        </a>
                        <a href="#" class="social-link" aria-label="LinkedIn">
                            <svg
                                width="18"
                                height="18"
                                viewBox="0 0 24 24"
                                fill="currentColor"
                            >
                                <path
                                    d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                                ></path>
                            </svg>
                        </a>
                        <a href="#" class="social-link" aria-label="YouTube">
                            <svg
                                width="18"
                                height="18"
                                viewBox="0 0 24 24"
                                fill="currentColor"
                            >
                                <path
                                    d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
                                ></path>
                            </svg>
                        </a>
                    </div>
                </div>

                <!-- Cities Column -->
                <div class="footer-column">
                    <h4 class="column-title">Popular Cities</h4>
                    <ul class="footer-links">
                        {
                            cityLinks.map((link) => (
                                <li>
                                    <a href={link.href}>{link.name}</a>
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <!-- Properties Column -->
                <div class="footer-column">
                    <h4 class="column-title">Properties</h4>
                    <ul class="footer-links">
                        {
                            propertyLinks.map((link) => (
                                <li>
                                    <a href={link.href}>{link.name}</a>
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <!-- Company Column -->
                <div class="footer-column">
                    <h4 class="column-title">Company</h4>
                    <ul class="footer-links">
                        {
                            companyLinks.map((link) => (
                                <li>
                                    <a href={link.href}>{link.name}</a>
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <!-- Newsletter Column -->
                <div class="footer-column newsletter-column">
                    <h4 class="column-title">Stay Updated</h4>
                    <p class="newsletter-desc">
                        Get the latest listings and updates delivered to your
                        inbox.
                    </p>
                    <form class="newsletter-form">
                        <div class="input-wrapper">
                            <input
                                type="email"
                                placeholder="Enter your email"
                                class="newsletter-input"
                            />
                            <button type="submit" class="newsletter-btn">
                                <svg
                                    width="18"
                                    height="18"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <line x1="22" y1="2" x2="11" y2="13"></line>
                                    <polygon points="22 2 15 22 11 13 2 9 22 2"
                                    ></polygon>
                                </svg>
                            </button>
                        </div>
                    </form>
                    <p class="newsletter-note">
                        <svg
                            width="14"
                            height="14"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path
                                d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"
                            ></path>
                        </svg>
                        We respect your privacy. Unsubscribe anytime.
                    </p>

                    <!-- Trust Badges -->
                    <div class="trust-badges">
                        <div class="trust-badge">
                            <svg
                                width="16"
                                height="16"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <path d="M22 11.08V12a10 10 0 11-5.93-9.14"
                                ></path>
                                <polyline points="22 4 12 14.01 9 11.01"
                                ></polyline>
                            </svg>
                            <span>Verified Listings</span>
                        </div>
                        <div class="trust-badge">
                            <svg
                                width="16"
                                height="16"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <rect
                                    x="3"
                                    y="11"
                                    width="18"
                                    height="11"
                                    rx="2"
                                    ry="2"></rect>
                                <path d="M7 11V7a5 5 0 0110 0v4"></path>
                            </svg>
                            <span>Secure Payments</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bottom Bar -->
    <div class="footer-bottom">
        <div class="container">
            <div class="bottom-inner">
                <p class="copyright">© 2026 HomeDaze. All rights reserved.</p>
                <div class="legal-links">
                    {
                        supportLinks.map((link) => (
                            <a href={link.href}>{link.name}</a>
                        ))
                    }
                </div>
                <div class="made-with">
                    <span>Made with</span>
                    <span class="heart">❤️</span>
                    <span>in India</span>
                </div>
            </div>
        </div>
    </div>
</footer>

<style>
    .footer {
        background: var(--bg-secondary);
        border-top: 1px solid var(--glass-border);
    }

    .footer-main {
        padding: 64px 0 48px;
    }

    .footer-grid {
        display: grid;
        grid-template-columns: 1.5fr repeat(3, 1fr) 1.3fr;
        gap: 40px;
    }

    /* Brand Column */
    .footer-brand {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .logo-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--accent);
        border-radius: var(--radius-md);
        color: var(--text-inverse);
    }

    .logo-text {
        font-family: var(--font-display);
        font-size: var(--text-xl);
        font-style: italic;
        color: var(--text-primary);
    }

    .brand-desc {
        font-size: var(--text-sm);
        color: var(--text-secondary);
        line-height: 1.7;
        max-width: 280px;
    }

    /* App Download */
    .app-download {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .app-label {
        font-size: var(--text-xs);
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .app-buttons {
        display: flex;
        gap: 8px;
    }

    .app-btn {
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--bg-elevated);
        border: 1px solid var(--glass-border);
        border-radius: var(--radius-md);
        color: var(--text-secondary);
        transition: all 0.3s var(--ease-out);
    }

    .app-btn:hover {
        color: var(--accent);
        border-color: var(--accent);
        transform: translateY(-2px);
    }

    /* Social Links */
    .social-links {
        display: flex;
        gap: 10px;
    }

    .social-link {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--bg-elevated);
        border: 1px solid var(--glass-border);
        border-radius: 50%;
        color: var(--text-secondary);
        transition: all 0.3s var(--ease-out);
    }

    .social-link:hover {
        background: var(--accent);
        color: var(--text-inverse);
        border-color: var(--accent);
        transform: translateY(-3px);
    }

    /* Footer Columns */
    .column-title {
        font-size: var(--text-sm);
        font-weight: 600;
        color: var(--text-primary);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 20px;
    }

    .footer-links {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .footer-links a {
        font-size: var(--text-sm);
        color: var(--text-secondary);
        transition: color 0.3s var(--ease-out);
    }

    .footer-links a:hover {
        color: var(--accent);
    }

    /* Newsletter Column */
    .newsletter-column {
        background: var(--bg-elevated);
        border: 1px solid var(--glass-border);
        border-radius: var(--radius-xl);
        padding: 24px;
    }

    .newsletter-desc {
        font-size: var(--text-sm);
        color: var(--text-secondary);
        margin-bottom: 16px;
        line-height: 1.5;
    }

    .input-wrapper {
        display: flex;
        background: var(--bg-secondary);
        border: 1px solid var(--glass-border);
        border-radius: var(--radius-lg);
        overflow: hidden;
        transition: border-color 0.3s var(--ease-out);
    }

    .input-wrapper:focus-within {
        border-color: var(--accent);
    }

    .newsletter-input {
        flex: 1;
        padding: 14px 16px;
        background: transparent;
        border: none;
        font-size: var(--text-sm);
        color: var(--text-primary);
        outline: none;
    }

    .newsletter-input::placeholder {
        color: var(--text-muted);
    }

    .newsletter-btn {
        padding: 14px 16px;
        background: var(--accent);
        color: var(--text-inverse);
        transition: background 0.3s var(--ease-out);
    }

    .newsletter-btn:hover {
        background: var(--accent-hover);
    }

    .newsletter-note {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: var(--text-xs);
        color: var(--text-muted);
        margin-top: 12px;
    }

    .newsletter-note svg {
        color: var(--color-success);
    }

    /* Trust Badges */
    .trust-badges {
        display: flex;
        flex-direction: column;
        gap: 8px;
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid var(--glass-border);
    }

    .trust-badge {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: var(--text-xs);
        color: var(--text-muted);
    }

    .trust-badge svg {
        color: var(--color-success);
    }

    /* Bottom Bar */
    .footer-bottom {
        padding: 20px 0;
        border-top: 1px solid var(--glass-border);
    }

    .bottom-inner {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 16px;
    }

    .copyright {
        font-size: var(--text-sm);
        color: var(--text-muted);
    }

    .legal-links {
        display: flex;
        gap: 24px;
        flex-wrap: wrap;
    }

    .legal-links a {
        font-size: var(--text-sm);
        color: var(--text-muted);
        transition: color 0.3s var(--ease-out);
    }

    .legal-links a:hover {
        color: var(--accent);
    }

    .made-with {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: var(--text-sm);
        color: var(--text-muted);
    }

    .heart {
        animation: pulse 1.5s ease-in-out infinite;
    }

    @keyframes pulse {
        0%,
        100% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.2);
        }
    }

    /* Responsive */
    @media (max-width: 1200px) {
        .footer-grid {
            grid-template-columns: repeat(3, 1fr);
        }

        .footer-brand {
            grid-column: 1 / -1;
            flex-direction: row;
            flex-wrap: wrap;
            gap: 32px;
            padding-bottom: 32px;
            border-bottom: 1px solid var(--glass-border);
            margin-bottom: 16px;
        }

        .brand-desc {
            flex: 1;
            max-width: 400px;
        }

        .newsletter-column {
            grid-column: 1 / -1;
        }
    }

    @media (max-width: 768px) {
        .footer-main {
            padding: 48px 0 32px;
        }

        .footer-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 32px;
        }

        .footer-brand {
            flex-direction: column;
            text-align: center;
            align-items: center;
        }

        .brand-desc {
            max-width: 100%;
        }

        .social-links,
        .app-buttons {
            justify-content: center;
        }

        .bottom-inner {
            flex-direction: column;
            text-align: center;
        }

        .legal-links {
            justify-content: center;
            gap: 16px;
        }
    }

    @media (max-width: 480px) {
        .footer-grid {
            grid-template-columns: 1fr;
        }

        .footer-column {
            text-align: center;
        }

        .footer-links {
            align-items: center;
        }

        .newsletter-column {
            text-align: left;
        }
    }
</style>
