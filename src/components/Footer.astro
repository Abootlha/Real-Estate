---
import { Icon } from "astro-icon/components";
---

<footer class="footer">
    <div class="container">
        <!-- Main Footer -->
        <div class="footer-main">
            <!-- Brand -->
            <div class="footer-brand" data-animate="fade-up">
                <a href="/" class="footer-logo">
                    <div class="logo-icon">
                        <Icon name="ph:house-fill" size={24} />
                    </div>
                    <span>RoomieMatch</span>
                </a>
                <p class="footer-tagline">
                    Helping you find a home that fits your life. Simple, safe,
                    and joyful.
                </p>
                <div class="footer-social">
                    <a href="#" aria-label="Instagram" class="social-link">
                        <Icon name="mdi:instagram" size={20} />
                    </a>
                    <a href="#" aria-label="Twitter" class="social-link">
                        <Icon name="mdi:twitter" size={20} />
                    </a>
                    <a href="#" aria-label="LinkedIn" class="social-link">
                        <Icon name="mdi:linkedin" size={20} />
                    </a>
                    <a href="#" aria-label="YouTube" class="social-link">
                        <Icon name="mdi:youtube" size={20} />
                    </a>
                </div>
            </div>

            <!-- Links -->
            <div class="footer-links" data-animate="fade-up" data-delay="1">
                <h4>Explore</h4>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/properties">Find Rooms</a></li>
                    <li><a href="/cities">Cities</a></li>
                    <li><a href="/about">About Us</a></li>
                </ul>
            </div>

            <div class="footer-links" data-animate="fade-up" data-delay="2">
                <h4>Resources</h4>
                <ul>
                    <li><a href="/faq">FAQs</a></li>
                    <li><a href="#">How It Works</a></li>
                    <li><a href="#">Safety Tips</a></li>
                    <li><a href="#">Blog</a></li>
                </ul>
            </div>

            <div class="footer-links" data-animate="fade-up" data-delay="3">
                <h4>Contact</h4>
                <ul>
                    <li>
                        <a href="mailto:support@roomiematch.com">
                            <Icon name="ph:envelope-simple-fill" size={18} />
                            support@roomiematch.com
                        </a>
                    </li>
                    <li>
                        <a href="tel:+911234567890">
                            <Icon name="ph:phone-fill" size={18} />
                            +91 123 456 7890
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <Icon name="ph:map-pin-fill" size={18} />
                            Pune, India
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="footer-bottom" data-animate="fade-up" data-delay="4">
            <p>&copy; 2025 RoomieMatch. All rights reserved.</p>
            <div class="footer-legal">
                <a href="#">Privacy Policy</a>
                <a href="#">Terms of Service</a>
                <a href="#">Cookie Policy</a>
            </div>
        </div>
    </div>
</footer>

<style>
    .footer {
        background: var(--bg-secondary);
        padding: 80px 0 32px;
    }

    .footer-main {
        display: grid;
        grid-template-columns: 1.5fr 1fr 1fr 1.2fr;
        gap: 48px;
        margin-bottom: 60px;
    }

    /* Brand */
    .footer-logo {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 16px;
    }

    .footer-logo .logo-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--accent);
        border-radius: var(--radius-md);
        color: var(--color-dark);
    }

    .footer-logo span {
        font-family: var(--font-display);
        font-size: var(--text-xl);
        font-weight: 700;
        color: var(--text-primary);
    }

    .footer-tagline {
        font-size: var(--text-base);
        color: var(--text-secondary);
        line-height: 1.7;
        margin-bottom: 24px;
        max-width: 280px;
    }

    /* Social Links */
    .footer-social {
        display: flex;
        gap: 12px;
    }

    .social-link {
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--color-white);
        border-radius: var(--radius-md);
        color: var(--text-secondary);
        box-shadow: var(--shadow-sm);
        transition: all 0.3s var(--ease-spring);
    }

    .social-link:hover {
        background: var(--accent);
        color: var(--color-dark);
        transform: translateY(-4px);
    }

    /* Links */
    .footer-links h4 {
        font-family: var(--font-display);
        font-size: var(--text-base);
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 20px;
    }

    .footer-links ul {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 14px;
    }

    .footer-links a {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        font-size: var(--text-sm);
        color: var(--text-secondary);
        transition: all 0.3s var(--ease-out);
    }

    .footer-links a:hover {
        color: var(--accent);
        transform: translateX(4px);
    }

    .footer-links a svg {
        color: var(--text-muted);
        flex-shrink: 0;
    }

    /* Bottom */
    .footer-bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 32px;
        border-top: 1px solid var(--color-silver);
    }

    .footer-bottom p {
        font-size: var(--text-sm);
        color: var(--text-muted);
    }

    .footer-legal {
        display: flex;
        gap: 24px;
    }

    .footer-legal a {
        font-size: var(--text-sm);
        color: var(--text-secondary);
        transition: color 0.3s var(--ease-out);
    }

    .footer-legal a:hover {
        color: var(--accent);
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .footer-main {
            grid-template-columns: 1fr 1fr;
        }

        .footer-brand {
            grid-column: span 2;
        }
    }

    @media (max-width: 768px) {
        .footer-main {
            grid-template-columns: 1fr;
            gap: 32px;
        }

        .footer-brand {
            grid-column: span 1;
        }

        .footer-bottom {
            flex-direction: column;
            gap: 16px;
            text-align: center;
        }

        .footer-legal {
            flex-wrap: wrap;
            justify-content: center;
        }
    }
</style>
