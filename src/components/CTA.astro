<section class="section cta-section">
    <div class="container">
        <div class="cta-wrapper">
            <!-- Background Elements -->
            <div class="cta-bg">
                <div class="orb orb-1"></div>
                <div class="orb orb-2"></div>
                <div class="pattern"></div>
            </div>

            <!-- Content -->
            <div class="cta-content" data-animate="fade-up">
                <span class="cta-badge">
                    <svg
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                    >
                        <path d="M22 11.08V12a10 10 0 11-5.93-9.14"></path>
                        <polyline points="22 4 12 14.01 9 11.01"></polyline>
                    </svg>
                    Join 25,000+ Happy Residents
                </span>

                <h2 class="cta-title">
                    Ready to Find Your <em>Perfect</em> Space?
                </h2>

                <p class="cta-desc">
                    Start your journey today with personalized recommendations,
                    verified listings, and smart roommate matching. Your dream
                    home is just a click away.
                </p>

                <div class="cta-buttons">
                    <a href="/properties" class="btn btn-primary btn-lg">
                        Explore Properties
                        <svg
                            width="18"
                            height="18"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                            <polyline points="12 5 19 12 12 19"></polyline>
                        </svg>
                    </a>
                    <a href="/roommates" class="btn btn-secondary btn-lg">
                        Find Roommates
                    </a>
                </div>

                <div class="cta-features">
                    <div class="feature">
                        <svg
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                        <span>Free to start</span>
                    </div>
                    <div class="feature">
                        <svg
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                        <span>Verified listings</span>
                    </div>
                    <div class="feature">
                        <svg
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                        <span>24/7 support</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .cta-section {
        background: var(--bg-primary);
        padding: clamp(48px, 8vw, 80px) 0;
    }

    .cta-wrapper {
        position: relative;
        background: var(--bg-secondary);
        border: 1px solid var(--glass-border);
        border-radius: var(--radius-2xl);
        padding: clamp(40px, 6vw, 80px) clamp(20px, 4vw, 40px);
        overflow: hidden;
    }

    /* Background */
    .cta-bg {
        position: absolute;
        inset: 0;
        pointer-events: none;
    }

    .orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(100px);
    }

    .orb-1 {
        width: clamp(200px, 40vw, 400px);
        height: clamp(200px, 40vw, 400px);
        background: var(--color-coral-glow);
        top: -100px;
        right: -100px;
        opacity: 0.6;
    }

    .orb-2 {
        width: clamp(150px, 30vw, 300px);
        height: clamp(150px, 30vw, 300px);
        background: rgba(255, 133, 119, 0.15);
        bottom: -100px;
        left: -100px;
        opacity: 0.5;
    }

    .pattern {
        position: absolute;
        inset: 0;
        background-image: radial-gradient(
            circle at 1px 1px,
            var(--color-ash) 1px,
            transparent 0
        );
        background-size: 40px 40px;
        opacity: 0.2;
    }

    /* Content */
    .cta-content {
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        max-width: 700px;
        margin: 0 auto;
        padding: 0 8px;
    }

    .cta-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        background: var(--color-coral-subtle);
        border: 1px solid rgba(255, 107, 90, 0.2);
        border-radius: var(--radius-full);
        font-size: clamp(var(--text-xs), 2.5vw, var(--text-sm));
        font-weight: 500;
        color: var(--accent);
        margin-bottom: clamp(16px, 3vw, 24px);
        text-align: center;
        flex-wrap: wrap;
        justify-content: center;
    }

    .cta-badge svg {
        color: var(--color-success);
        flex-shrink: 0;
    }

    .cta-title {
        font-family: var(--font-display);
        font-size: clamp(1.5rem, 5vw, var(--text-5xl));
        font-weight: 400;
        color: var(--text-primary);
        margin-bottom: clamp(12px, 2vw, 20px);
        line-height: 1.2;
    }

    .cta-title em {
        font-style: italic;
        color: var(--accent);
    }

    .cta-desc {
        font-size: clamp(var(--text-base), 2vw, var(--text-lg));
        color: var(--text-secondary);
        line-height: 1.7;
        margin-bottom: clamp(24px, 4vw, 32px);
        padding: 0 8px;
    }

    .cta-buttons {
        display: flex;
        gap: 16px;
        margin-bottom: clamp(24px, 4vw, 32px);
        flex-wrap: wrap;
        justify-content: center;
        width: 100%;
    }

    .cta-features {
        display: flex;
        gap: clamp(16px, 3vw, 32px);
        flex-wrap: wrap;
        justify-content: center;
    }

    .feature {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: var(--text-sm);
        color: var(--text-secondary);
    }

    .feature svg {
        color: var(--color-success);
        flex-shrink: 0;
    }

    /* Tablet */
    @media (max-width: 768px) {
        .cta-wrapper {
            padding: 48px 20px;
            border-radius: var(--radius-xl);
        }

        .cta-buttons {
            flex-direction: column;
            width: 100%;
            max-width: 320px;
        }

        .cta-buttons .btn {
            width: 100%;
            justify-content: center;
        }

        .cta-features {
            flex-direction: column;
            gap: 12px;
            align-items: center;
        }
    }

    /* Mobile */
    @media (max-width: 480px) {
        .cta-section {
            padding: 40px 0;
        }

        .cta-wrapper {
            padding: 32px 16px;
            border-radius: var(--radius-lg);
        }

        .cta-badge {
            padding: 6px 12px;
        }

        .cta-title {
            font-size: 1.5rem;
            line-height: 1.3;
        }

        .cta-desc {
            font-size: var(--text-sm);
            line-height: 1.6;
        }

        .cta-buttons {
            gap: 12px;
        }

        .cta-buttons .btn {
            padding: 14px 20px;
            font-size: var(--text-sm);
        }

        .feature {
            font-size: var(--text-xs);
        }
    }

    /* Extra small */
    @media (max-width: 374px) {
        .cta-wrapper {
            padding: 24px 12px;
        }

        .cta-badge {
            font-size: 11px;
            padding: 6px 10px;
        }

        .cta-title {
            font-size: 1.25rem;
        }
    }
</style>
