---
import { Icon } from "astro-icon/components";
---

<section class="cta-section">
    <div class="container">
        <div class="cta-grid">
            <!-- Left Content -->
            <div class="cta-content">
                <!-- Decorative Pink Blob -->
                <div class="decorative-blob">
                    <svg
                        viewBox="0 0 200 200"
                        xmlns="http://www.w3.org/2000/svg"
                        class="blob-shape"
                    >
                        <path
                            fill="#FF5A5F"
                            d="M47.5,-57.2C59.9,-45.8,67.3,-29.5,69.8,-12.5C72.3,4.5,69.9,22.2,61.4,36.8C52.9,51.3,38.3,62.7,21.8,68.4C5.3,74.1,-13.1,74.1,-29.5,68.1C-45.9,62.1,-60.3,50.1,-68.1,34.6C-75.9,19.1,-77.1,0.1,-72.8,-17.1C-68.5,-34.3,-58.7,-49.7,-45.2,-60.9C-31.7,-72.1,-14.5,-79.1,1.5,-81C17.5,-82.9,35.1,-68.7,47.5,-57.2Z"
                            transform="translate(100 100)"></path>
                    </svg>
                    <svg
                        viewBox="0 0 200 200"
                        xmlns="http://www.w3.org/2000/svg"
                        class="blob-outline"
                    >
                        <path
                            fill="none"
                            stroke="#FF5A5F"
                            stroke-width="1"
                            d="M47.5,-57.2C59.9,-45.8,67.3,-29.5,69.8,-12.5C72.3,4.5,69.9,22.2,61.4,36.8C52.9,51.3,38.3,62.7,21.8,68.4C5.3,74.1,-13.1,74.1,-29.5,68.1C-45.9,62.1,-60.3,50.1,-68.1,34.6C-75.9,19.1,-77.1,0.1,-72.8,-17.1C-68.5,-34.3,-58.7,-49.7,-45.2,-60.9C-31.7,-72.1,-14.5,-79.1,1.5,-81C17.5,-82.9,35.1,-68.7,47.5,-57.2Z"
                            transform="translate(100 100) scale(1.15)"></path>
                    </svg>
                </div>

                <!-- Text Content -->
                <div class="cta-text">
                    <h2 class="cta-title">
                        Join us to get a great experience for finding a room and
                        a perfect roommate
                    </h2>
                    <p class="cta-description">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit,
                        sed do eiusmod tempor incididunt ut labore et dolore
                        magna aliqua. Ut enim ad minim veniam, quis nostrud
                        exercitation ullamco.
                    </p>

                    <!-- App Store Buttons -->
                    <div class="app-buttons">
                        <a href="#" class="store-btn">
                            <div class="store-icon">
                                <Icon name="logos:google-play-icon" size={24} />
                            </div>
                            <div class="store-text">
                                <span>Get it on</span>
                                <strong>Google Play</strong>
                            </div>
                        </a>
                        <a href="#" class="store-btn">
                            <div class="store-icon">
                                <Icon name="mdi:apple" size={26} />
                            </div>
                            <div class="store-text">
                                <span>Download on the</span>
                                <strong>Apple Store</strong>
                            </div>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Right Image -->
            <div class="cta-image-wrapper">
                <div class="pink-gradient-bg"></div>
                <img
                    src="/Adobe Express - file.png"
                    alt="Woman pointing at phone"
                    class="cta-person"
                />
            </div>
        </div>
    </div>
</section>

<style>
    .cta-section {
        position: relative;
        padding: 80px 0 0;
        overflow: hidden;
        background: var(--color-white);
    }

    .cta-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        align-items: stretch;
        min-height: 500px;
    }

    /* Left Content */
    .cta-content {
        position: relative;
        padding: 60px 0;
        padding-right: 40px;
    }

    /* Decorative Blob */
    .decorative-blob {
        position: absolute;
        top: 0;
        left: -60px;
        width: 220px;
        height: 220px;
        z-index: 0;
    }

    .blob-shape {
        position: absolute;
        width: 100%;
        height: 100%;
        animation: blobFloat 8s ease-in-out infinite;
    }

    .blob-outline {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 10px;
        left: 20px;
        animation: blobFloat 8s ease-in-out infinite reverse;
    }

    @keyframes blobFloat {
        0%,
        100% {
            transform: translateY(0) rotate(0deg);
        }
        50% {
            transform: translateY(-10px) rotate(5deg);
        }
    }

    /* Text Content */
    .cta-text {
        position: relative;
        z-index: 1;
        padding-top: 100px;
    }

    .cta-title {
        font-family: var(--font-display);
        font-size: clamp(1.75rem, 3vw, 2.25rem);
        font-weight: 700;
        line-height: 1.3;
        color: var(--text-primary);
        margin-bottom: 20px;
        font-style: italic;
        max-width: 480px;
    }

    .cta-description {
        font-size: 14px;
        line-height: 1.7;
        color: var(--text-secondary);
        margin-bottom: 32px;
        max-width: 500px;
    }

    /* App Store Buttons */
    .app-buttons {
        display: flex;
        gap: 16px;
    }

    .store-btn {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 24px;
        background: var(--color-white);
        border: 1px solid var(--color-silver);
        border-radius: 50px;
        transition: all 0.3s var(--ease-out);
    }

    .store-btn:hover {
        border-color: var(--color-pink-primary);
        box-shadow: 0 4px 20px rgba(255, 90, 95, 0.15);
        transform: translateY(-2px);
    }

    .store-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-primary);
    }

    .store-text {
        display: flex;
        flex-direction: column;
        line-height: 1.2;
    }

    .store-text span {
        font-size: 10px;
        color: var(--text-secondary);
    }

    .store-text strong {
        font-size: 14px;
        font-weight: 600;
        color: var(--text-primary);
    }

    /* Right Image Wrapper */
    .cta-image-wrapper {
        position: relative;
        display: flex;
        align-items: flex-end;
        justify-content: center;
        overflow: hidden;
    }

    .pink-gradient-bg {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        width: 100%;
        background: linear-gradient(
            135deg,
            #ffd4d6 0%,
            #f8b4b8 50%,
            #e8989c 100%
        );
        border-radius: 0 0 0 200px;
        z-index: 0;
    }

    .cta-person {
        position: relative;
        z-index: 1;
        max-width: 100%;
        height: auto;
        max-height: 480px;
        object-fit: contain;
        object-position: bottom;
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .cta-grid {
            grid-template-columns: 1fr;
            min-height: auto;
        }

        .cta-content {
            padding-right: 0;
            text-align: center;
        }

        .decorative-blob {
            left: 50%;
            transform: translateX(-50%);
            top: -20px;
        }

        .cta-text {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .cta-title,
        .cta-description {
            max-width: 100%;
            text-align: center;
        }

        .app-buttons {
            justify-content: center;
        }

        .cta-image-wrapper {
            margin-top: 40px;
            height: 400px;
        }

        .pink-gradient-bg {
            border-radius: 200px 200px 0 0;
        }
    }

    @media (max-width: 600px) {
        .cta-section {
            padding: 60px 0 0;
        }

        .decorative-blob {
            width: 160px;
            height: 160px;
        }

        .cta-text {
            padding-top: 80px;
        }

        .app-buttons {
            flex-direction: column;
            width: 100%;
        }

        .store-btn {
            width: 100%;
            max-width: 280px;
            justify-content: center;
        }

        .cta-image-wrapper {
            height: 300px;
        }
    }
</style>
