---
import { Icon } from "astro-icon/components";
---

<section class="cta-section">
    <!-- Wave Separator -->
    <div class="wave-top">
        <svg viewBox="0 0 1440 320" preserveAspectRatio="none" class="wave-svg">
            <path
                fill="#FF8F94"
                fill-opacity="1"
                d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,112C672,96,768,96,864,112C960,128,1056,160,1152,160C1248,160,1344,128,1392,112L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
            ></path>
        </svg>
    </div>

    <div class="cta-content-wrapper">
        <div class="container">
            <div class="cta-grid">
                <div class="cta-text">
                    <h2 class="cta-title" data-animate="fade-up">
                        Join us to get a
                        <br />
                        <span class="font-script">great experience</span>
                        <br />
                        finding your perfect roommate
                    </h2>
                    <p class="cta-desc" data-animate="fade-up" data-delay="1">
                        Connect with over 100,000 verified roommates and find
                        your home sweet home today.
                    </p>

                    <div
                        class="app-buttons"
                        data-animate="fade-up"
                        data-delay="2"
                    >
                        <a href="#" class="btn-store btn-white">
                            <div class="store-icon">
                                <Icon name="mdi:apple" size={28} />
                            </div>
                            <div class="store-text">
                                <span>Download on the</span>
                                <strong>App Store</strong>
                            </div>
                        </a>
                        <a href="#" class="btn-store btn-white">
                            <div class="store-icon">
                                <Icon name="logos:google-play-icon" size={24} />
                            </div>
                            <div class="store-text">
                                <span>Get it on</span>
                                <strong>Google Play</strong>
                            </div>
                        </a>
                    </div>
                </div>

                <div class="cta-image" data-animate="fade-left" data-delay="1">
                    <img
                        src="https://images.unsplash.com/photo-1529626455594-4ff0802cfb7e?w=800&q=80"
                        alt="Happy roommate"
                        class="person-img"
                    />
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .cta-section {
        position: relative;
        overflow: hidden;
        margin-top: 100px;
    }

    .wave-top {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        overflow: hidden;
        line-height: 0;
        transform: translateY(-98%); /* Pull it up so it sits on top */
        z-index: 1;
    }

    .wave-svg {
        position: relative;
        display: block;
        width: calc(100% + 1.3px);
        height: 150px;
    }

    .cta-content-wrapper {
        background-color: #ff8f94; /* Match wave color */
        padding: 40px 0 100px;
        position: relative;
        z-index: 2;
    }

    .cta-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        align-items: center;
        gap: 60px;
    }

    .cta-text {
        color: white;
    }

    .cta-title {
        font-family: var(--font-display);
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        line-height: 1.1;
        margin-bottom: 24px;
        font-weight: 800;
    }

    .cta-desc {
        font-size: 1.25rem;
        margin-bottom: 40px;
        opacity: 0.9;
        max-width: 500px;
    }

    .app-buttons {
        display: flex;
        gap: 16px;
    }

    .btn-store {
        display: flex;
        align-items: center;
        gap: 12px;
        background: rgba(0, 0, 0, 1);
        color: white;
        padding: 12px 24px;
        border-radius: 16px;
        transition: transform 0.3s var(--ease-spring);
    }

    .btn-white {
        background: white;
        color: var(--color-pink-primary);
    }

    .btn-store:hover {
        transform: translateY(-4px);
    }

    .store-text {
        display: flex;
        flex-direction: column;
        line-height: 1.2;
    }

    .store-text span {
        font-size: 11px;
        opacity: 0.8;
    }
    .store-text strong {
        font-size: 15px;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .cta-image {
        position: relative;
        display: flex;
        justify-content: center;
    }

    .person-img {
        max-width: 100%;
        height: auto;
        mask-image: radial-gradient(
            circle at center,
            black 60%,
            transparent 100%
        );
        -webkit-mask-image: radial-gradient(
            circle at center,
            black 60%,
            transparent 100%
        );
        object-fit: contain;
        transform: scale(1.2);
    }

    @media (max-width: 900px) {
        .cta-grid {
            grid-template-columns: 1fr;
            text-align: center;
        }

        .cta-text {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .cta-desc {
            margin-left: auto;
            margin-right: auto;
        }

        .cta-image {
            margin-top: -40px;
            opacity: 0.5;
        }
    }

    @media (max-width: 600px) {
        .app-buttons {
            flex-direction: column;
            width: 100%;
            max-width: 300px;
        }
        .btn-store {
            width: 100%;
            justify-content: start;
        }
    }
</style>
