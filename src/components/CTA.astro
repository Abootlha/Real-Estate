<style>
    .cta {
        padding: 60px 0 100px;
    }

    .cta-card {
        position: relative;
        padding: 100px 60px;
        border-radius: var(--radius-2xl);
        overflow: hidden;
        min-height: 550px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Background - Vibrant Gradient */
    .cta-bg {
        position: absolute;
        inset: 0;
        z-index: 0;
    }

    .bg-gradient {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            135deg,
            #0a0a0a 0%,
            #1a1a1a 30%,
            #2d2d2d 60%,
            #1a1a1a 100%
        );
    }

    .bg-glow {
        position: absolute;
        border-radius: 50%;
        filter: blur(100px);
    }

    .glow-1 {
        width: 500px;
        height: 500px;
        top: -200px;
        left: -100px;
        background: rgba(200, 230, 68, 0.15);
    }

    .glow-2 {
        width: 400px;
        height: 400px;
        bottom: -150px;
        right: -100px;
        background: rgba(200, 230, 68, 0.1);
    }

    /* Floating Elements */
    .floating-elements {
        position: absolute;
        inset: 0;
        pointer-events: none;
    }

    .float-card {
        position: absolute;
        width: 160px;
        border-radius: var(--radius-lg);
        overflow: hidden;
        box-shadow: var(--shadow-xl);
        animation: floatContinuous 5s ease-in-out infinite;
    }

    .float-card img {
        width: 100%;
        height: 100px;
        object-fit: cover;
    }

    .card-tag {
        position: absolute;
        bottom: 8px;
        left: 8px;
        padding: 6px 12px;
        background: var(--accent);
        border-radius: var(--radius-full);
        font-family: var(--font-display);
        font-size: var(--text-xs);
        font-weight: 700;
        color: var(--color-dark);
    }

    .float-1 {
        top: 80px;
        left: 80px;
        transform: rotate(-5deg);
        animation-delay: 0s;
    }

    .float-2 {
        bottom: 80px;
        right: 80px;
        transform: rotate(5deg);
        animation-delay: 1s;
    }

    .float-badge {
        position: absolute;
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 14px 22px;
        background: var(--color-white);
        border-radius: var(--radius-full);
        font-family: var(--font-display);
        font-size: var(--text-sm);
        font-weight: 700;
        color: var(--color-dark);
        box-shadow: var(--shadow-lg);
        animation: floatContinuous 4s ease-in-out infinite;
    }

    .badge-1 {
        top: 50%;
        left: 60px;
        transform: translateY(-50%);
        animation-delay: 0.5s;
    }

    .badge-2 {
        bottom: 40%;
        right: 60px;
        background: var(--accent);
        animation-delay: 1.5s;
    }

    /* Content */
    .cta-content {
        position: relative;
        z-index: 10;
        text-align: center;
        max-width: 600px;
    }

    .cta-label {
        display: inline-block;
        padding: 8px 20px;
        background: rgba(200, 230, 68, 0.15);
        border: 1px solid rgba(200, 230, 68, 0.3);
        border-radius: var(--radius-full);
        font-family: var(--font-display);
        font-size: var(--text-sm);
        font-weight: 600;
        color: var(--accent);
        margin-bottom: 24px;
    }

    .cta-title {
        font-family: var(--font-display);
        font-size: clamp(2rem, 5vw, var(--text-5xl));
        font-weight: 800;
        color: var(--text-inverse);
        margin-bottom: 20px;
        line-height: 1.1;
    }

    .cta-text {
        font-size: var(--text-lg);
        color: var(--color-gray);
        margin-bottom: 36px;
        line-height: 1.7;
    }

    /* Form */
    .cta-form {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 16px;
        margin-bottom: 32px;
    }

    .input-group {
        display: flex;
        gap: 12px;
        width: 100%;
        max-width: 500px;
        padding: 8px;
        background: rgba(255, 255, 255, 0.08);
        border-radius: var(--radius-full);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .input-group input {
        flex: 1;
        padding: 14px 20px;
        border: none;
        border-radius: var(--radius-full);
        font-family: var(--font-body);
        font-size: var(--text-base);
        background: transparent;
        color: var(--text-inverse);
    }

    .input-group input::placeholder {
        color: var(--color-gray);
    }

    .input-group input:focus {
        outline: none;
    }

    .input-group .btn {
        padding: 14px 28px;
    }

    .form-note {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: var(--text-sm);
        color: var(--color-gray);
    }

    .form-note svg {
        color: var(--accent);
    }

    /* Trust Badges */
    .trust-badges {
        display: flex;
        justify-content: center;
        gap: 32px;
        flex-wrap: wrap;
    }

    .trust-item {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: var(--text-sm);
        color: var(--color-gray);
    }

    .trust-item svg {
        color: var(--accent);
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .cta-card {
            padding: 80px 40px;
        }

        .float-card {
            width: 140px;
        }

        .float-1 {
            top: 40px;
            left: 40px;
        }

        .float-2 {
            bottom: 40px;
            right: 40px;
        }

        .float-badge {
            display: none;
        }
    }

    @media (max-width: 768px) {
        .cta-card {
            padding: 60px 24px;
            min-height: auto;
        }

        .floating-elements {
            display: none;
        }

        .input-group {
            flex-direction: column;
            background: transparent;
            border: none;
            padding: 0;
        }

        .input-group input {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.15);
        }

        .input-group .btn {
            width: 100%;
        }

        .trust-badges {
            flex-direction: column;
            gap: 16px;
            align-items: center;
        }
    }
</style>
