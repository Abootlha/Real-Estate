---
import Blob from "./Blob.astro";
import { Icon } from "astro-icon/components";
---

<section class="hero">
    <!-- Background Decor -->
    <div class="hero-bg">
        <div class="blob-1">
            <Blob
                color="var(--color-pink-primary)"
                size="600px"
                opacity={0.1}
            />
        </div>
        <div class="blob-2">
            <Blob
                color="var(--color-peach)"
                size="500px"
                opacity={0.15}
                delay="2s"
            />
        </div>
        <div class="blob-3">
            <Blob
                color="var(--color-yellow)"
                size="300px"
                opacity={0.1}
                delay="4s"
            />
        </div>
    </div>

    <div class="container">
        <div class="hero-grid">
            <!-- Left Content -->
            <div class="hero-content">
                <div
                    class="badge-wrapper"
                    data-animate="fade-down"
                    data-delay="1"
                >
                    <span class="badge badge-pink">
                        <span class="badge-icon">✨</span> #1 Roommate Finder in India
                    </span>
                </div>

                <!-- Main Title using Reference Style -->
                <h1 class="hero-title" data-animate="fade-up" data-delay="2">
                    Find your <br class="title-break" />
                    <span class="font-script text-pink">perfect</span>
                    roommates
                </h1>

                <p class="hero-desc" data-animate="fade-up" data-delay="3">
                    Stop searching alone. Connect with verified people who share
                    your vibe, lifestyle, and budget. Simple, safe, and
                    stress-free.
                </p>

                <div class="hero-actions" data-animate="fade-up" data-delay="4">
                    <div class="app-buttons">
                        <a href="#" class="btn-store">
                            <div class="store-icon">
                                <Icon name="mdi:apple" size={28} />
                            </div>
                            <div class="store-text">
                                <span>Download on the</span>
                                <strong>App Store</strong>
                            </div>
                        </a>
                        <a href="#" class="btn-store">
                            <div class="store-icon">
                                <Icon name="logos:google-play-icon" size={24} />
                            </div>
                            <div class="store-text">
                                <span>Get it on</span>
                                <strong>Google Play</strong>
                            </div>
                        </a>
                    </div>

                    <div class="hero-stats">
                        <div class="avatars">
                            <img
                                src="https://images.unsplash.com/photo-1534528741775-53994a69daeb?w=64&h=64&fit=crop&crop=faces"
                                alt="User"
                            />
                            <img
                                src="https://images.unsplash.com/photo-1506794778202-cad84cf45f1d?w=64&h=64&fit=crop&crop=faces"
                                alt="User"
                            />
                            <img
                                src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=64&h=64&fit=crop&crop=faces"
                                alt="User"
                            />
                            <div class="avatar-plus">+2k</div>
                        </div>
                        <p class="stats-text">
                            <strong>2,000+</strong> people joined today!
                        </p>
                    </div>
                </div>
            </div>

            <!-- Right Content / Visual -->
            <div class="hero-visual" data-animate="fade-left" data-delay="3">
                <div class="visual-circle"></div>

                <div class="main-image-wrapper">
                    <img
                        src="https://images.unsplash.com/photo-1628157588553-5eeea00af15c?w=800&q=90"
                        alt="Happy roommate using phone"
                        class="main-image"
                    />
                </div>

                <!-- Floating Elements - Matching Reference -->
                <div class="float-card card-match">
                    <div class="match-icon">❤️</div>
                    <div class="match-info">
                        <strong>It's a Match!</strong>
                        <span>98% Compatible</span>
                    </div>
                </div>

                <div class="float-card card-message">
                    <div class="float-avatar">
                        <img
                            src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=64&h=64&fit=crop&crop=faces"
                            alt="Sarah"
                        />
                    </div>
                    <div class="message-content">
                        <strong>Sarah sent a request</strong>
                        <p>Hey! I love your apartment...</p>
                    </div>
                </div>

                <div class="float-card card-location">
                    <span class="location-icon text-pink"
                        ><Icon name="ph:map-pin-fill" /></span
                    >
                    <span>Koramangala, BLR</span>
                </div>
            </div>
        </div>

        <!-- SEARCH BAR OVERLAY (New) -->
        <div class="search-bar-floating" data-animate="fade-up" data-delay="5">
            <div class="search-item">
                <label>Location</label>
                <div class="input-wrapper">
                    <span class="icon text-pink"
                        ><Icon name="ph:map-pin-fill" /></span
                    >
                    <select>
                        <option>Bangalore</option>
                        <option>Mumbai</option>
                        <option>Delhi</option>
                        <option>Pune</option>
                    </select>
                </div>
            </div>
            <div class="divider"></div>
            <div class="search-item">
                <label>Looking For</label>
                <div class="input-wrapper">
                    <span class="icon text-pink"
                        ><Icon name="ph:house-fill" /></span
                    >
                    <select>
                        <option>Private Room</option>
                        <option>Shared Room</option>
                        <option>Entire Flat</option>
                    </select>
                </div>
            </div>
            <div class="divider"></div>
            <div class="search-item">
                <label>Budget</label>
                <div class="input-wrapper">
                    <span class="icon text-pink"
                        ><Icon name="ph:currency-inr-fill" /></span
                    >
                    <select>
                        <option>₹5k - ₹10k</option>
                        <option>₹10k - ₹20k</option>
                        <option>₹20k+</option>
                    </select>
                </div>
            </div>

            <button class="search-btn btn-primary"> Search </button>
        </div>
    </div>
</section>

<style>
    .hero {
        position: relative;
        padding: 180px 0 140px; /* Increased bottom padding for search bar */
        overflow: visible; /* Allow search bar to overlap */
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    /* Background Decorations */
    .hero-bg {
        position: absolute;
        inset: 0;
        z-index: -1;
        pointer-events: none;
        overflow: hidden;
        background: radial-gradient(
            circle at 100% 0%,
            rgba(255, 116, 116, 0.05) 0%,
            transparent 40%
        );
    }

    .blob-1 {
        position: absolute;
        top: -10%;
        left: -10%;
    }
    .blob-2 {
        position: absolute;
        bottom: 10%;
        right: -5%;
    }
    .blob-3 {
        position: absolute;
        top: 40%;
        left: 40%;
    }

    .hero-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 60px;
        align-items: center;
        margin-bottom: 60px;
    }

    /* Content */
    .hero-title {
        font-size: clamp(3rem, 5vw, 4.5rem);
        line-height: 1.1;
        margin-bottom: 24px;
        letter-spacing: -0.02em;
        color: var(--text-primary);
    }

    .text-pink {
        color: var(--color-pink-primary);
        font-weight: 400;
        display: inline-block;
        transform: rotate(-3deg);
    }

    .hero-desc {
        font-size: 1.25rem;
        color: var(--text-secondary);
        max-width: 480px;
        margin-bottom: 40px;
        line-height: 1.6;
    }

    /* Badge */
    .badge-wrapper {
        margin-bottom: 24px;
    }
    .badge-icon {
        margin-right: 4px;
    }

    /* Buttons */
    .hero-actions {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    .app-buttons {
        display: flex;
        gap: 16px;
    }

    .btn-store {
        display: flex;
        align-items: center;
        gap: 12px;
        background: var(--color-darker);
        color: var(--color-white);
        padding: 12px 24px;
        border-radius: 16px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s var(--ease-spring);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .btn-store:hover {
        transform: translateY(-4px);
        box-shadow: 0 14px 24px rgba(0, 0, 0, 0.15);
        background: black;
    }

    .store-text {
        display: flex;
        flex-direction: column;
        line-height: 1.2;
    }

    .store-text span {
        font-size: 11px;
        opacity: 0.8;
    }
    .store-text strong {
        font-size: 15px;
        font-weight: 600;
    }

    /* Stats */
    .hero-stats {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .avatars {
        display: flex;
    }

    .avatars img,
    .avatar-plus {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        border: 4px solid var(--color-white);
        object-fit: cover;
        margin-left: -16px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

    .avatars img:first-child {
        margin-left: 0;
    }

    .avatar-plus {
        background: var(--color-pink-primary);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
        font-weight: 700;
    }

    .stats-text {
        font-size: 0.95rem;
        color: var(--text-secondary);
    }

    /* Visual / Right Side */
    .hero-visual {
        position: relative;
        height: 650px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .main-image-wrapper {
        position: relative;
        z-index: 2;
        width: 420px;
        height: 520px;
        border-radius: 200px 200px 40px 40px; /* Arch shape */
        overflow: hidden;
        box-shadow: var(--shadow-xl);
        background: #f0f0f0;
    }

    .visual-circle {
        position: absolute;
        width: 600px;
        height: 600px;
        background: radial-gradient(
            circle,
            var(--color-pink-light) 0%,
            rgba(255, 255, 255, 0) 70%
        );
        border-radius: 50%;
        z-index: 1;
        opacity: 0.3;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .main-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Floating Cards */
    .float-card {
        position: absolute;
        z-index: 3;
        background: rgba(255, 255, 255, 0.9);
        padding: 14px 20px;
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08); /* Softer, deeper shadow */
        display: flex;
        align-items: center;
        gap: 12px;
        animation: floatContinuous 4s ease-in-out infinite;
        border: 1px solid rgba(255, 255, 255, 0.4);
        backdrop-filter: blur(10px);
    }

    .card-match {
        top: 80px;
        right: 20px;
        animation-delay: 0s;
    }

    .match-icon {
        width: 40px;
        height: 40px;
        background: #fff0f0;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
    }

    .match-info {
        display: flex;
        flex-direction: column;
        line-height: 1.3;
    }

    .match-info strong {
        font-size: 14px;
        color: var(--text-primary);
    }
    .match-info span {
        font-size: 12px;
        color: var(--text-muted);
    }

    .card-message {
        bottom: 120px;
        left: -20px;
        animation-delay: 1.5s;
        padding-right: 30px;
    }

    .float-avatar img {
        width: 44px;
        height: 44px;
        border-radius: 50%;
        object-fit: cover;
    }

    .message-content {
        display: flex;
        flex-direction: column;
        line-height: 1.3;
    }

    .message-content strong {
        font-size: 14px;
        color: var(--text-primary);
    }
    .message-content p {
        font-size: 12px;
        color: var(--text-secondary);
    }

    .card-location {
        top: 45%;
        left: -60px;
        padding: 12px 20px;
        font-weight: 600;
        font-size: 14px;
        color: var(--text-primary);
        animation-delay: 1s;
    }

    /* -------------------------------------------------------------
       SEARCH BAR FLOATING
       ------------------------------------------------------------- */
    .search-bar-floating {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 24px; /* Larger radius */
        padding: 16px; /* More padding */
        box-shadow: 0 30px 60px rgba(0, 0, 0, 0.1); /* Deeper premium shadow */
        display: flex;
        align-items: center;
        gap: 20px;
        max-width: 960px; /* Slightly wider */
        margin: 0 auto;
        position: relative;
        z-index: 10;
        border: 1px solid rgba(255, 255, 255, 0.5);
        backdrop-filter: blur(12px);
    }

    .search-item {
        flex: 1;
        padding: 8px 16px;
    }

    .search-item label {
        display: block;
        font-size: 0.75rem;
        font-weight: 700;
        color: var(--text-muted);
        margin-bottom: 6px;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .input-wrapper {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .input-wrapper .icon {
        font-size: 1.1rem;
    }

    .input-wrapper select {
        border: none;
        background: transparent;
        font-size: 1rem;
        font-weight: 600;
        color: var(--text-primary);
        width: 100%;
        outline: none;
        cursor: pointer;
        padding-right: 16px;
        appearance: none; /* Hide default arrow to be cleaner */
    }

    .divider {
        width: 1px;
        height: 40px;
        background: var(--color-gray);
        opacity: 0.2;
    }

    .search-btn {
        padding: 16px 32px;
        border-radius: 12px;
        font-size: 1rem;
        transition: transform 0.2s;
        border: none;
        cursor: pointer;
    }

    .search-btn:hover {
        transform: scale(1.05);
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .hero-grid {
            grid-template-columns: 1fr;
            text-align: center;
            gap: 60px;
        }

        .title-break {
            display: none;
        }
        .hero-desc {
            margin: 0 auto 40px;
        }

        .hero-actions {
            align-items: center;
        }
        .hero-stats {
            justify-content: center;
        }

        .hero-visual {
            height: 500px;
            margin-top: 20px;
        }
        .main-image-wrapper {
            width: 340px;
            height: 420px;
        }

        .card-match {
            right: 0;
        }
        .card-location {
            left: 0;
        }
        .card-message {
            left: 0;
        }

        .search-bar-floating {
            flex-direction: column;
            align-items: stretch;
            gap: 12px;
            padding: 20px;
        }

        .divider {
            display: none;
        }
        .search-item {
            padding: 0;
        }
        .input-wrapper {
            background: var(--color-cloud);
            padding: 12px;
            border-radius: 12px;
        }
    }

    @media (max-width: 600px) {
        .hero {
            padding-top: 120px;
        }
        .hero-title {
            font-size: 2.5rem;
        }

        .app-buttons {
            flex-direction: column;
            width: 100%;
            max-width: 300px;
        }
        .btn-store {
            width: 100%;
            justify-content: start;
        }

        .float-card {
            transform: scale(0.9);
        }
        .card-location {
            display: none;
        } /* Hide some floaters on mobile */
    }
</style>
