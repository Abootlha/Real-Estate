<section class="features" id="features">
    <div class="container">
        <div class="features-header">
            <span class="section-label">Features</span>
            <h2 class="section-title">
                Everything you need to find
                <br />
                <span class="gradient-text">the perfect living situation</span>
            </h2>
            <p class="section-desc">
                Built specifically for the modern renter who wants more than
                just any random room or roommate.
            </p>
        </div>

        <div class="features-grid">
            {
                features.map((feature, i) => (
                    <div class="feature-card" style={`--index: ${i}`}>
                        <div class="feature-icon" set:html={feature.icon} />
                        <h3 class="feature-title">{feature.title}</h3>
                        <p class="feature-desc">{feature.desc}</p>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .features {
        padding: var(--section-padding) 0;
        position: relative;
    }

    .features-header {
        text-align: center;
        max-width: 700px;
        margin: 0 auto 80px;
    }

    .features-header .section-desc {
        margin: 0 auto;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 24px;
    }

    .feature-card {
        position: relative;
        padding: 32px;
        background: var(--bg-card);
        border: 1px solid var(--border-subtle);
        border-radius: var(--card-radius);
        transition: all var(--duration-slow) var(--ease-out-expo);
        animation: fadeInUp 0.5s ease-out backwards;
        animation-delay: calc(var(--index) * 0.08s);
    }

    .feature-card::before {
        content: "";
        position: absolute;
        inset: 0;
        border-radius: var(--card-radius);
        background: linear-gradient(
            135deg,
            rgba(255, 120, 73, 0.08) 0%,
            transparent 60%
        );
        opacity: 0;
        transition: opacity var(--duration-normal);
    }

    .feature-card:hover {
        border-color: var(--border-accent);
        transform: translateY(-4px);
    }

    .feature-card:hover::before {
        opacity: 1;
    }

    .feature-icon {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(
            135deg,
            rgba(255, 120, 73, 0.15) 0%,
            rgba(255, 120, 73, 0.05) 100%
        );
        border: 1px solid rgba(255, 120, 73, 0.2);
        border-radius: 12px;
        color: var(--accent-primary);
        margin-bottom: 20px;
        transition: all var(--duration-normal);
    }

    .feature-icon :global(svg) {
        width: 24px;
        height: 24px;
    }

    .feature-card:hover .feature-icon {
        background: var(--accent-primary);
        color: #000;
        transform: scale(1.05);
    }

    .feature-title {
        font-family: var(--font-display);
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 12px;
        letter-spacing: -0.01em;
    }

    .feature-desc {
        font-size: 15px;
        color: var(--text-secondary);
        line-height: 1.7;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(24px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 900px) {
        .features-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 600px) {
        .features-grid {
            grid-template-columns: 1fr;
        }
        .feature-card {
            padding: 24px;
        }
    }
</style>
