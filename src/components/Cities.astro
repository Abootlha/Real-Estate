---
import { Icon } from "astro-icon/components";

const cities = [
    {
        name: "Mumbai",
        lat: 19.076,
        lng: 72.8777,
        count: "2,450+",
        image: "https://images.unsplash.com/photo-1570168007204-dfb528c6958f?w=300&h=300&fit=crop&q=90",
    },
    {
        name: "Bangalore",
        lat: 12.9716,
        lng: 77.5946,
        count: "1,820+",
        image: "https://images.unsplash.com/photo-1596176530529-78163a4f7af2?w=300&h=300&fit=crop&q=90",
    },
    {
        name: "Delhi",
        lat: 28.6139,
        lng: 77.209,
        count: "2,100+",
        image: "https://images.unsplash.com/photo-1587474260584-136574528ed5?w=300&h=300&fit=crop&q=90",
    },
    {
        name: "Hyderabad",
        lat: 17.385,
        lng: 78.4867,
        count: "1,350+",
        image: "https://images.unsplash.com/photo-1572445271230-a78b5944a659?w=300&h=300&fit=crop&q=90",
    },
    {
        name: "Chennai",
        lat: 13.0827,
        lng: 80.2707,
        count: "980+",
        image: "https://images.unsplash.com/photo-1582510003544-4d00b7f74220?w=300&h=300&fit=crop&q=90",
    },
    {
        name: "Pune",
        lat: 18.5204,
        lng: 73.8567,
        count: "1,150+",
        image: "https://images.unsplash.com/photo-1600596542815-ffad4c1539a9?w=300&h=300&fit=crop&q=90",
    },
];

// Property markers on the map
const properties = [
    { city: "Mumbai", price: "₹18,000", lat: 19.033, lng: 72.8296 },
    { city: "Delhi", price: "₹25,000", lat: 28.5672, lng: 77.21 },
    { city: "Bangalore", price: "₹22,000", lat: 12.9352, lng: 77.6245 },
    { city: "Hyderabad", price: "₹15,000", lat: 17.44, lng: 78.3489 },
    { city: "Pune", price: "₹12,000", lat: 18.5679, lng: 73.9143 },
    { city: "Chennai", price: "₹16,000", lat: 13.0604, lng: 80.2496 },
    { city: "Kolkata", price: "₹14,000", lat: 22.5726, lng: 88.3639 },
    { city: "Ahmedabad", price: "₹11,000", lat: 23.0225, lng: 72.5714 },
];
---

<!-- Interactive Map Section -->
<section class="explore-map section">
    <div class="map-wrapper">
        <!-- Content Overlay -->
        <div class="map-content" data-animate="fade-up">
            <h2 class="map-title">Explore Nearby Homes</h2>
            <p class="map-subtitle">
                Browse available homes across India and explore<br />
                listings in your favorite cities.
            </p>
            <a href="/properties" class="btn btn-primary">
                Explore All Properties
                <Icon name="ph:arrow-right-bold" size={16} />
            </a>
        </div>

        <!-- Leaflet Map Container -->
        <div id="india-map" class="leaflet-map"></div>
    </div>
</section>

<!-- Cities Grid Section -->
<section class="cities section" id="cities">
    <div class="container">
        <div class="section-header" data-animate="fade-up">
            <h2 class="section-title">Popular Cities</h2>
            <p class="section-subtitle">
                Explore homes across major cities in India
            </p>
        </div>

        <div class="cities-grid">
            {
                cities.map((city, i) => (
                    <a
                        href={`/city/${city.name.toLowerCase()}`}
                        class="city-card"
                        data-animate="pop"
                        data-delay={i + 1}
                    >
                        <div class="city-image">
                            <img
                                src={city.image}
                                alt={city.name}
                                loading="lazy"
                            />
                        </div>
                        <div class="city-info">
                            <h3 class="city-name">{city.name}</h3>
                            <span class="city-count">
                                {city.count} listings
                            </span>
                        </div>
                    </a>
                ))
            }
        </div>
    </div>
</section>

<!-- Map Initialization Script -->
<script define:vars={{ properties }}>
    // Wait for DOM and Leaflet to be ready
    document.addEventListener("DOMContentLoaded", () => {
        // Check if Leaflet is loaded
        if (typeof L === "undefined") {
            console.log("Leaflet not loaded yet");
            return;
        }

        // Initialize the map centered on India
        const map = L.map("india-map", {
            center: [20.5937, 78.9629],
            zoom: 5,
            zoomControl: false,
            attributionControl: false,
            scrollWheelZoom: false,
            dragging: true,
        });

        // Add Light-themed map tiles (CartoDB Positron) for cleaner look
        L.tileLayer(
            "https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png",
            {
                subdomains: "abcd",
                maxZoom: 19,
            },
        ).addTo(map);

        // Custom marker icon
        const priceIcon = (price) =>
            L.divIcon({
                className: "custom-price-marker",
                html: `<div class="price-marker">${price}</div>`,
                iconSize: [80, 32],
                iconAnchor: [40, 16],
            });

        // Add property markers
        properties.forEach((prop) => {
            L.marker([prop.lat, prop.lng], { icon: priceIcon(prop.price) })
                .addTo(map)
                .bindPopup(
                    `<strong>${prop.city}</strong><br>${prop.price}/month`,
                );
        });

        // Add zoom control to bottom right
        L.control.zoom({ position: "bottomright" }).addTo(map);
    });
</script>

<style>
    /* ═══════════════════════════════════════════════════════════════════════════
       EXPLORE MAP SECTION - With Real Leaflet Map
       ═══════════════════════════════════════════════════════════════════════════ */
    .explore-map {
        position: relative;
        padding: 0;
        overflow: hidden;
        min-height: 600px;
        background: var(--color-white);
    }

    .map-wrapper {
        position: relative;
        height: 600px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Leaflet Map */
    .leaflet-map {
        position: absolute;
        inset: 0;
        z-index: 1;
        mix-blend-mode: multiply; /* Blends map nicely with bg */
        opacity: 0.8;
    }

    /* Custom Price Markers */
    :global(.custom-price-marker) {
        background: none;
        border: none;
    }

    :global(.price-marker) {
        padding: 8px 16px;
        background: var(--color-white);
        border-radius: 9999px;
        font-family: var(--font-display);
        font-size: 13px;
        font-weight: 700;
        color: var(--color-pink-primary);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        white-space: nowrap;
        animation: markerPop 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
        border: 2px solid var(--color-pink-primary);
    }

    :global(.price-marker:hover) {
        background: var(--color-pink-primary);
        color: white;
        transform: scale(1.1);
        cursor: pointer;
    }

    @keyframes markerPop {
        from {
            opacity: 0;
            transform: scale(0.5) translateY(10px);
        }
        to {
            opacity: 1;
            transform: scale(1) translateY(0);
        }
    }

    /* Content Overlay */
    .map-content {
        position: relative;
        z-index: 10;
        text-align: center;
        padding: 40px;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-radius: var(--radius-2xl);
        border: 1px solid rgba(255, 255, 255, 0.6);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }

    .map-title {
        font-family: var(--font-display);
        font-size: clamp(1.75rem, 3vw, var(--text-3xl));
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 12px;
    }

    .map-subtitle {
        font-size: var(--text-base);
        color: var(--text-secondary);
        margin-bottom: 24px;
        line-height: 1.6;
    }

    /* ═══════════════════════════════════════════════════════════════════════════
       CITIES SECTION
       ═══════════════════════════════════════════════════════════════════════════ */
    .cities {
        background: var(--bg-primary);
        padding-top: 80px;
    }

    .cities-grid {
        display: grid;
        grid-template-columns: repeat(6, 1fr);
        gap: 24px;
    }

    .city-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 16px;
        padding: 24px;
        background: var(--bg-secondary);
        border-radius: var(--radius-xl);
        transition: all 0.4s var(--ease-spring);
    }

    .city-card:hover {
        transform: translateY(-10px) scale(1.02);
        background: var(--color-white);
        box-shadow: var(--shadow-xl);
    }

    .city-image {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        overflow: hidden;
        box-shadow: var(--shadow-md);
        transition: transform 0.4s var(--ease-spring);
        border: 3px solid white;
    }

    .city-card:hover .city-image {
        transform: scale(1.1) rotate(-3deg);
    }

    .city-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .city-info {
        text-align: center;
    }

    .city-name {
        font-family: var(--font-display);
        font-size: var(--text-base);
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 4px;
    }

    .city-count {
        font-size: var(--text-sm);
        color: var(--text-muted);
    }

    /* Responsive */
    @media (max-width: 1200px) {
        .cities-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @media (max-width: 768px) {
        .cities-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .map-wrapper {
            height: 500px;
        }
    }

    @media (max-width: 480px) {
        .map-wrapper {
            height: 450px;
        }

        .city-card {
            padding: 16px;
        }

        .city-image {
            width: 70px;
            height: 70px;
        }

        .map-content {
            margin: 20px;
            padding: 24px;
        }
    }
</style>

<style is:global>
    /* Leaflet Popup Customization - Light Theme */
    .leaflet-popup-content-wrapper {
        background: #fff;
        color: #1a1a1a;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .leaflet-popup-content {
        margin: 12px 16px;
        font-family: "Plus Jakarta Sans", sans-serif;
    }

    .leaflet-popup-content strong {
        color: var(--color-pink-primary);
    }

    .leaflet-popup-tip {
        background: #fff;
    }

    .leaflet-container {
        font-family: "Plus Jakarta Sans", sans-serif;
    }
</style>
