---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const listings = [
    {
        id: 1,
        image: "https://images.unsplash.com/photo-1522708323590-d24dbb6b0267?w=600&h=450&fit=crop&q=90",
        price: "₹8,000",
        priceType: "/month",
        title: "Shared Room in 3BHK",
        location: "Andheri East, Mumbai",
        roommates: 2,
        gender: "Male",
        available: "Immediate",
        tag: "Featured",
        verified: true,
    },
    {
        id: 2,
        image: "https://images.unsplash.com/photo-1502672260266-1c1ef2d93688?w=600&h=450&fit=crop&q=90",
        price: "₹12,000",
        priceType: "/month",
        title: "Private Room in Shared Flat",
        location: "Koramangala, Bangalore",
        roommates: 1,
        gender: "Any",
        available: "1st Feb",
        tag: "New",
        verified: true,
    },
    {
        id: 3,
        image: "https://images.unsplash.com/photo-1560448204-e02f11c3d0e2?w=600&h=450&fit=crop&q=90",
        price: "₹6,500",
        priceType: "/month",
        title: "Looking for Female Flatmate",
        location: "Hinjewadi, Pune",
        roommates: 1,
        gender: "Female",
        available: "15th Jan",
        verified: true,
    },
    {
        id: 4,
        image: "https://images.unsplash.com/photo-1493809842364-78817add7ffb?w=600&h=450&fit=crop&q=90",
        price: "₹15,000",
        priceType: "/month",
        title: "Premium Shared Apartment",
        location: "Dwarka, Delhi",
        roommates: 2,
        gender: "Any",
        available: "Immediate",
        tag: "Premium",
        verified: true,
    },
    {
        id: 5,
        image: "https://images.unsplash.com/photo-1536376072261-38c75010e6c9?w=600&h=450&fit=crop&q=90",
        price: "₹9,000",
        priceType: "/month",
        title: "Cozy Room Near IT Park",
        location: "HITEC City, Hyderabad",
        roommates: 1,
        gender: "Male",
        available: "1st Feb",
        verified: true,
    },
    {
        id: 6,
        image: "https://images.unsplash.com/photo-1484154218962-a197022b5858?w=600&h=450&fit=crop&q=90",
        price: "₹7,500",
        priceType: "/month",
        title: "Spacious Shared Room",
        location: "OMR, Chennai",
        roommates: 2,
        gender: "Any",
        available: "Immediate",
        tag: "Hot",
        verified: true,
    },
    {
        id: 7,
        image: "https://images.unsplash.com/photo-1522771739844-6a9f6d5f14af?w=600&h=450&fit=crop&q=90",
        price: "₹10,500",
        priceType: "/month",
        title: "Modern Studio in Tech Hub",
        location: "Sector 62, Noida",
        roommates: 1,
        gender: "Any",
        available: "This Week",
        tag: "New",
        verified: true,
    },
    {
        id: 8,
        image: "https://images.unsplash.com/photo-1595526114035-0d45ed16cfbf?w=600&h=450&fit=crop&q=90",
        price: "₹11,000",
        priceType: "/month",
        title: "Female-Only PG with Food",
        location: "HSR Layout, Bangalore",
        roommates: 1,
        gender: "Female",
        available: "Immediate",
        tag: "Featured",
        verified: true,
    },
    {
        id: 9,
        image: "https://images.unsplash.com/photo-1502672023488-70e25813eb80?w=600&h=450&fit=crop&q=90",
        price: "₹5,500",
        priceType: "/month",
        title: "Budget Room for Students",
        location: "Viman Nagar, Pune",
        roommates: 2,
        gender: "Male",
        available: "1st Feb",
        verified: true,
    },
];

const title = "Find Rooms | RoomieMatch";
const description =
    "Browse verified rooms and roommates across India. Find your perfect living situation with RoomieMatch.";
---

<Layout title={title} description={description}>
    <Navbar />

    <main class="properties-page">
        <!-- Page Header -->
        <section class="page-header">
            <div class="container">
                <div class="header-content">
                    <nav class="breadcrumb">
                        <a href="/">Home</a>
                        <span class="separator">/</span>
                        <span class="current">Find Rooms</span>
                    </nav>
                    <h1 class="page-title">Find Your Perfect Room</h1>
                    <p class="page-subtitle">
                        Explore {listings.length * 100}+ verified rooms and
                        roommates across India
                    </p>
                </div>
            </div>
        </section>

        <!-- Compact Filters Bar -->
        <section class="filters-section">
            <div class="container">
                <div class="filters-row">
                    <div class="filters-left">
                        <div class="filter-pills">
                            <button class="filter-pill active">All</button>
                            <button class="filter-pill">Rooms</button>
                            <button class="filter-pill">Roommates</button>
                            <button class="filter-pill">PG</button>
                        </div>

                        <div class="filter-divider"></div>

                        <div class="filter-dropdowns">
                            <button class="filter-btn-dropdown">
                                <span>Location</span>
                                <svg
                                    width="12"
                                    height="12"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <path d="M6 9l6 6 6-6"></path>
                                </svg>
                            </button>
                            <button class="filter-btn-dropdown">
                                <span>Property Type</span>
                                <svg
                                    width="12"
                                    height="12"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <path d="M6 9l6 6 6-6"></path>
                                </svg>
                            </button>
                            <button class="filter-btn-dropdown">
                                <span>Gender</span>
                                <svg
                                    width="12"
                                    height="12"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <path d="M6 9l6 6 6-6"></path>
                                </svg>
                            </button>
                            <svg
                                width="12"
                                height="12"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <path d="M6 9l6 6 6-6"></path>
                            </svg>
                        </div>
                        <button class="more-filters-btn">
                            <svg
                                width="16"
                                height="16"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <line x1="4" y1="21" x2="4" y2="14"></line>
                                <line x1="4" y1="10" x2="4" y2="3"></line>
                                <line x1="12" y1="21" x2="12" y2="12"></line>
                                <line x1="12" y1="8" x2="12" y2="3"></line>
                                <line x1="20" y1="21" x2="20" y2="16"></line>
                                <line x1="20" y1="12" x2="20" y2="3"></line>
                                <line x1="1" y1="14" x2="7" y2="14"></line>
                                <line x1="9" y1="8" x2="15" y2="8"></line>
                                <line x1="17" y1="16" x2="23" y2="16"></line>
                            </svg>
                            <span>More</span>
                        </button>
                    </div>
                </div>

                <div class="filters-right">
                    <span class="results-count"
                        ><strong>{listings.length}</strong> listings</span
                    >

                    <div class="sort-dropdown">
                        <select>
                            <option>Recommended</option>
                            <option>Price: Low to High</option>
                            <option>Price: High to Low</option>
                            <option>Newest First</option>
                        </select>
                    </div>

                    <div class="view-toggle">
                        <button class="view-btn active" aria-label="Grid view">
                            <svg
                                width="16"
                                height="16"
                                viewBox="0 0 24 24"
                                fill="currentColor"
                            >
                                <rect x="3" y="3" width="7" height="7" rx="1"
                                ></rect>
                                <rect x="14" y="3" width="7" height="7" rx="1"
                                ></rect>
                                <rect x="3" y="14" width="7" height="7" rx="1"
                                ></rect>
                                <rect x="14" y="14" width="7" height="7" rx="1"
                                ></rect>
                            </svg>
                        </button>
                        <button class="view-btn" aria-label="List view">
                            <svg
                                width="16"
                                height="16"
                                viewBox="0 0 24 24"
                                fill="currentColor"
                            >
                                <rect x="3" y="4" width="18" height="4" rx="1"
                                ></rect>
                                <rect x="3" y="10" width="18" height="4" rx="1"
                                ></rect>
                                <rect x="3" y="16" width="18" height="4" rx="1"
                                ></rect>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- Properties Grid -->
    <section class="properties-list">
        <div class="container">
            <div class="properties-grid">
                {
                    listings.map((listing) => (
                        <a
                            href={`/property/${listing.id}`}
                            class="property-card card"
                        >
                            <div class="property-media">
                                <img
                                    src={listing.image}
                                    alt={listing.title}
                                    loading="lazy"
                                />
                                <div class="media-overlay" />

                                {listing.tag && (
                                    <span
                                        class={`property-tag tag-${listing.tag.toLowerCase()}`}
                                    >
                                        {listing.tag}
                                    </span>
                                )}

                                <button
                                    class="save-btn"
                                    aria-label="Save listing"
                                >
                                    <svg
                                        width="20"
                                        height="20"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z" />
                                    </svg>
                                </button>
                            </div>

                            <div class="property-body">
                                <div class="property-header">
                                    <div class="property-price">
                                        <span class="price-amount">
                                            {listing.price}
                                        </span>
                                        <span class="price-type">
                                            {listing.priceType}
                                        </span>
                                    </div>
                                    {listing.verified && (
                                        <span
                                            class="verified-badge"
                                            title="Verified"
                                        >
                                            <svg
                                                width="16"
                                                height="16"
                                                viewBox="0 0 24 24"
                                                fill="currentColor"
                                            >
                                                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                            </svg>
                                        </span>
                                    )}
                                </div>

                                <h3 class="property-title">{listing.title}</h3>

                                <p class="property-location">
                                    <svg
                                        width="14"
                                        height="14"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z" />
                                        <circle cx="12" cy="10" r="3" />
                                    </svg>
                                    {listing.location}
                                </p>

                                <div class="property-divider" />

                                <div class="property-features">
                                    <div class="feature">
                                        <svg
                                            width="16"
                                            height="16"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="1.5"
                                        >
                                            <path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2" />
                                            <circle cx="9" cy="7" r="4" />
                                        </svg>
                                        <span>
                                            {listing.roommates} Roommate
                                            {listing.roommates > 1 ? "s" : ""}
                                        </span>
                                    </div>
                                    <div class="feature">
                                        <span class="gender-badge">
                                            {listing.gender}
                                        </span>
                                    </div>
                                    <div class="feature available">
                                        <span>{listing.available}</span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    ))
                }
            </div>

            <!-- Pagination -->
            <div class="pagination">
                <button class="page-btn" aria-label="Previous">
                    <svg
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                    >
                        <path d="M15 18l-6-6 6-6"></path>
                    </svg>
                </button>
                <button class="page-num active">1</button>
                <button class="page-num">2</button>
                <button class="page-num">3</button>
                <span class="page-ellipsis">...</span>
                <button class="page-num">12</button>
                <button class="page-btn" aria-label="Next">
                    <svg
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                    >
                        <path d="M9 18l6-6-6-6"></path>
                    </svg>
                </button>
            </div>
        </div>
    </section>
</Layout>

<Footer />

<style>
    .properties-page {
        min-height: 100vh;
    }

    /* Page Header */
    .page-header {
        background: linear-gradient(
            180deg,
            var(--bg-secondary) 0%,
            var(--bg-primary) 100%
        );
        padding: 48px 0;
        text-align: center;
    }

    .breadcrumb {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        font-size: var(--text-sm);
        color: var(--text-muted);
        margin-bottom: 16px;
    }

    .breadcrumb a:hover {
        color: var(--accent);
    }

    .breadcrumb .separator {
        color: var(--border-default);
    }

    .breadcrumb .current {
        color: var(--text-secondary);
    }

    .page-title {
        font-family: var(--font-display);
        font-size: var(--text-4xl);
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 12px;
        letter-spacing: -0.02em;
    }

    .page-subtitle {
        font-size: var(--text-lg);
        color: var(--text-muted);
    }

    /* Filters Section */
    .filters-section {
        background: var(--bg-primary);
        padding: 16px 0;
        border-bottom: 1px solid var(--border-subtle);
        position: sticky;
        top: 72px;
        z-index: 50;
    }

    .filters-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 24px;
    }

    .filters-left {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .filter-pills {
        display: flex;
        gap: 4px;
        padding: 4px;
        background: var(--bg-secondary);
        border-radius: var(--radius-full);
    }

    .filter-pill {
        padding: 8px 18px;
        font-size: var(--text-sm);
        font-weight: 500;
        color: var(--text-muted);
        border-radius: var(--radius-full);
        transition: all var(--duration-fast);
    }

    .filter-pill:hover {
        color: var(--text-primary);
    }

    .filter-pill.active {
        background: var(--text-primary);
        color: white;
    }

    .filter-divider {
        width: 1px;
        height: 24px;
        background: var(--border-subtle);
    }

    .filter-dropdowns {
        display: flex;
        gap: 8px;
    }

    .filter-btn-dropdown {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 10px 16px;
        background: var(--bg-secondary);
        border: 1px solid var(--border-subtle);
        border-radius: var(--radius-lg);
        font-size: var(--text-sm);
        font-weight: 500;
        color: var(--text-secondary);
        transition: all var(--duration-fast);
        white-space: nowrap;
    }

    .filter-btn-dropdown:hover {
        border-color: var(--accent);
        color: var(--text-primary);
    }

    .more-filters-btn {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 10px 14px;
        background: transparent;
        border: 1px dashed var(--border-subtle);
        border-radius: var(--radius-lg);
        font-size: var(--text-sm);
        font-weight: 500;
        color: var(--text-muted);
        transition: all var(--duration-fast);
    }

    .more-filters-btn:hover {
        border-color: var(--accent);
        color: var(--accent);
    }

    .filters-right {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .results-count {
        font-size: var(--text-sm);
        color: var(--text-muted);
    }

    .results-count strong {
        color: var(--text-primary);
    }

    .sort-dropdown select {
        padding: 8px 12px;
        border: 1px solid var(--border-subtle);
        border-radius: var(--radius-md);
        background: var(--bg-elevated);
        font-size: var(--text-sm);
        cursor: pointer;
        font-family: var(--font-body);
        color: var(--text-secondary);
    }

    .view-toggle {
        display: flex;
        gap: 4px;
        padding: 4px;
        background: var(--bg-secondary);
        border-radius: var(--radius-md);
    }

    .view-btn {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: var(--radius-sm);
        color: var(--text-muted);
        transition: all var(--duration-fast);
    }

    .view-btn:hover {
        color: var(--text-primary);
    }

    .view-btn.active {
        background: var(--bg-elevated);
        color: var(--accent);
        box-shadow: var(--shadow-sm);
    }

    /* Properties Grid */
    .properties-list {
        padding: 48px 0 80px;
    }

    .properties-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 32px;
        margin-bottom: 60px;
    }

    .property-card {
        display: block;
        border-radius: var(--radius-2xl);
        overflow: hidden;
        text-decoration: none;
    }

    .property-media {
        position: relative;
        aspect-ratio: 4 / 3;
        overflow: hidden;
    }

    .property-media img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform var(--duration-slow) var(--ease-out);
    }

    .property-card:hover .property-media img {
        transform: scale(1.08);
    }

    .media-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            180deg,
            transparent 50%,
            rgba(12, 20, 33, 0.3) 100%
        );
        opacity: 0;
        transition: opacity var(--duration-base);
    }

    .property-card:hover .media-overlay {
        opacity: 1;
    }

    .property-tag {
        position: absolute;
        top: 16px;
        left: 16px;
        padding: 6px 14px;
        font-size: var(--text-xs);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        border-radius: var(--radius-full);
    }

    .tag-featured {
        background: var(--accent);
        color: white;
    }
    .tag-new {
        background: var(--color-emerald);
        color: white;
    }
    .tag-premium {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
    }
    .tag-hot {
        background: var(--color-amber);
        color: var(--color-midnight);
    }

    .save-btn {
        position: absolute;
        top: 16px;
        right: 16px;
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--bg-elevated);
        border-radius: 50%;
        color: var(--text-muted);
        box-shadow: var(--shadow-md);
        transition: all var(--duration-fast);
    }

    .save-btn:hover {
        transform: scale(1.1);
        color: var(--accent);
    }

    .property-body {
        padding: 24px;
    }

    .property-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
    }

    .property-price {
        display: flex;
        align-items: baseline;
        gap: 2px;
    }

    .price-amount {
        font-family: var(--font-display);
        font-size: var(--text-2xl);
        font-weight: 600;
        color: var(--text-primary);
    }

    .price-type {
        font-size: var(--text-sm);
        color: var(--text-muted);
    }

    .verified-badge {
        color: var(--color-emerald);
    }

    .property-title {
        font-size: var(--text-lg);
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 8px;
    }

    .property-location {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: var(--text-sm);
        color: var(--text-muted);
    }

    .property-divider {
        height: 1px;
        background: var(--border-subtle);
        margin: 16px 0;
    }

    .property-features {
        display: flex;
        gap: 20px;
    }

    .feature {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: var(--text-sm);
        color: var(--text-muted);
    }

    /* Pagination */
    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 8px;
    }

    .page-btn,
    .page-num {
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: var(--radius-lg);
        font-size: var(--text-sm);
        font-weight: 500;
        color: var(--text-secondary);
        background: var(--bg-elevated);
        border: 1px solid var(--border-subtle);
        transition: all var(--duration-fast);
    }

    .page-btn:hover,
    .page-num:hover {
        border-color: var(--accent);
        color: var(--accent);
    }

    .page-num.active {
        background: var(--color-midnight);
        color: white;
        border-color: var(--color-midnight);
    }

    .page-ellipsis {
        padding: 0 8px;
        color: var(--text-muted);
    }

    @media (max-width: 1024px) {
        .filters-bar {
            flex-wrap: wrap;
        }

        .filter-group {
            flex: 1 1 calc(50% - 8px);
        }

        .filter-btn {
            flex: 1 1 100%;
        }

        .properties-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

