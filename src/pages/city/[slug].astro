---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";

export function getStaticPaths() {
    const cities = [
        { slug: "mumbai", name: "Mumbai", listings: 2450 },
        { slug: "bangalore", name: "Bangalore", listings: 1890 },
        { slug: "delhi", name: "Delhi NCR", listings: 2120 },
        { slug: "hyderabad", name: "Hyderabad", listings: 1340 },
        { slug: "chennai", name: "Chennai", listings: 980 },
        { slug: "pune", name: "Pune", listings: 1560 },
    ];

    return cities.map((city) => ({
        params: { slug: city.slug },
        props: { city },
    }));
}

const { city } = Astro.props;

const listings = [
    {
        id: 1,
        image: "https://images.unsplash.com/photo-1522708323590-d24dbb6b0267?w=600&h=450&fit=crop&q=90",
        price: "₹8,000",
        priceType: "/month",
        title: `Shared Room in ${city.name}`,
        location: `Prime Location, ${city.name}`,
        roommates: 2,
        gender: "Any",
        available: "Immediate",
        tag: "Featured",
        verified: true,
    },
    {
        id: 2,
        image: "https://images.unsplash.com/photo-1502672260266-1c1ef2d93688?w=600&h=450&fit=crop&q=90",
        price: "₹12,000",
        priceType: "/month",
        title: `Private Room in ${city.name}`,
        location: `Central ${city.name}`,
        roommates: 1,
        gender: "Male",
        available: "1st Feb",
        tag: "New",
        verified: true,
    },
    {
        id: 3,
        image: "https://images.unsplash.com/photo-1560448204-e02f11c3d0e2?w=600&h=450&fit=crop&q=90",
        price: "₹6,500",
        priceType: "/month",
        title: `Looking for Flatmate`,
        location: `Suburbs, ${city.name}`,
        roommates: 1,
        gender: "Female",
        available: "15th Jan",
        verified: true,
    },
    {
        id: 4,
        image: "https://images.unsplash.com/photo-1493809842364-78817add7ffb?w=600&h=450&fit=crop&q=90",
        price: "₹15,000",
        priceType: "/month",
        title: `Premium Shared Apartment`,
        location: `IT Hub, ${city.name}`,
        roommates: 2,
        gender: "Any",
        available: "Immediate",
        tag: "Premium",
        verified: true,
    },
    {
        id: 5,
        image: "https://images.unsplash.com/photo-1536376072261-38c75010e6c9?w=600&h=450&fit=crop&q=90",
        price: "₹9,000",
        priceType: "/month",
        title: `Cozy Room Near Metro`,
        location: `Residential, ${city.name}`,
        roommates: 1,
        gender: "Male",
        available: "This Week",
        verified: true,
    },
    {
        id: 6,
        image: "https://images.unsplash.com/photo-1484154218962-a197022b5858?w=600&h=450&fit=crop&q=90",
        price: "₹7,500",
        priceType: "/month",
        title: `Budget Shared Room`,
        location: `Tech Park, ${city.name}`,
        roommates: 2,
        gender: "Any",
        available: "Immediate",
        tag: "Hot",
        verified: true,
    },
];

const neighborhoods = [
    { name: "Central", listings: Math.floor(city.listings * 0.25) },
    { name: "North", listings: Math.floor(city.listings * 0.2) },
    { name: "South", listings: Math.floor(city.listings * 0.22) },
    { name: "East", listings: Math.floor(city.listings * 0.18) },
    { name: "West", listings: Math.floor(city.listings * 0.15) },
];
---

<Layout
    title={`Roommates in ${city.name} | RoomieMatch`}
    description={`Find ${city.listings}+ verified roommates in ${city.name}. Shared rooms, flatmates, and more.`}
>
    <Navbar />

    <main class="city-page">
        <!-- City Hero -->
        <section class="city-hero">
            <div class="hero-bg">
                <img
                    src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?w=1400&h=500&fit=crop&q=80"
                    alt={city.name}
                />
                <div class="hero-overlay"></div>
            </div>
            <div class="container">
                <nav class="breadcrumb">
                    <a href="/">Home</a>
                    <span>/</span>
                    <a href="/cities">Cities</a>
                    <span>/</span>
                    <span class="current">{city.name}</span>
                </nav>
                <h1 class="hero-title">Roommates in {city.name}</h1>
                <p class="hero-subtitle">
                    Explore {city.listings.toLocaleString()}+ verified roommates
                    in {city.name}
                </p>

                <div class="city-stats">
                    <div class="stat">
                        <span class="stat-value"
                            >{city.listings.toLocaleString()}+</span
                        >
                        <span class="stat-label">Listings</span>
                    </div>
                    <div class="stat">
                        <span class="stat-value">{neighborhoods.length}</span>
                        <span class="stat-label">Neighborhoods</span>
                    </div>
                    <div class="stat">
                        <span class="stat-value">4.8</span>
                        <span class="stat-label">Avg. Rating</span>
                    </div>
                </div>
            </div>
        </section>

        <!-- Neighborhoods -->
        <section class="neighborhoods-section">
            <div class="container">
                <h2 class="section-title">Popular Neighborhoods</h2>
                <div class="neighborhoods-grid">
                    {
                        neighborhoods.map((n) => (
                            <a href="#" class="neighborhood-card">
                                <span class="neighborhood-name">
                                    {n.name} {city.name}
                                </span>
                                <span class="neighborhood-count">
                                    {n.listings} roommates
                                </span>
                            </a>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Properties Grid -->
        <section class="properties-section">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">
                        Featured Listings in {city.name}
                    </h2>
                    <a href="/properties" class="btn btn-outline">
                        View All
                        <svg
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path d="M5 12h14M12 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>

                <div class="properties-grid">
                    {
                        listings.map((listing) => (
                            <a
                                href={`/property/${listing.id}`}
                                class="property-card card"
                            >
                                <div class="property-media">
                                    <img
                                        src={listing.image}
                                        alt={listing.title}
                                        loading="lazy"
                                    />

                                    {listing.tag && (
                                        <span
                                            class={`property-tag tag-${listing.tag.toLowerCase()}`}
                                        >
                                            {listing.tag}
                                        </span>
                                    )}

                                    <button class="save-btn" aria-label="Save">
                                        <svg
                                            width="18"
                                            height="18"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                        >
                                            <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z" />
                                        </svg>
                                    </button>
                                </div>

                                <div class="property-body">
                                    <div class="property-price">
                                        <span class="price-amount">
                                            {listing.price}
                                        </span>
                                        <span class="price-type">
                                            {listing.priceType}
                                        </span>
                                    </div>

                                    <h3 class="property-title">
                                        {listing.title}
                                    </h3>

                                    <p class="property-location">
                                        <svg
                                            width="14"
                                            height="14"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                        >
                                            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z" />
                                            <circle cx="12" cy="10" r="3" />
                                        </svg>
                                        {listing.location}
                                    </p>

                                    <div class="property-features">
                                        <span>
                                            {listing.roommates} Roommate
                                            {listing.roommates > 1 ? "s" : ""}
                                        </span>
                                        <span>{listing.gender}</span>
                                        <span>{listing.available}</span>
                                    </div>
                                </div>
                            </a>
                        ))
                    }
                </div>
            </div>
        </section>
    </main>

    <Footer />
</Layout>

<style>
    .city-page {
        min-height: 100vh;
    }

    /* City Hero */
    .city-hero {
        position: relative;
        padding: 120px 0 80px;
        color: white;
    }

    .hero-bg {
        position: absolute;
        inset: 0;
        z-index: -1;
    }

    .hero-bg img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            180deg,
            rgba(12, 20, 33, 0.7) 0%,
            rgba(12, 20, 33, 0.9) 100%
        );
    }

    .breadcrumb {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: var(--text-sm);
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 20px;
    }

    .breadcrumb a:hover {
        color: white;
    }

    .breadcrumb span {
        color: rgba(255, 255, 255, 0.4);
    }

    .breadcrumb .current {
        color: white;
    }

    .hero-title {
        font-family: var(--font-display);
        font-size: var(--text-5xl);
        font-weight: 600;
        margin-bottom: 12px;
        letter-spacing: -0.02em;
    }

    .hero-subtitle {
        font-size: var(--text-lg);
        opacity: 0.8;
        margin-bottom: 40px;
    }

    .city-stats {
        display: flex;
        gap: 48px;
    }

    .stat {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .stat-value {
        font-family: var(--font-display);
        font-size: var(--text-3xl);
        font-weight: 600;
    }

    .stat-label {
        font-size: var(--text-sm);
        opacity: 0.7;
    }

    /* Neighborhoods */
    .neighborhoods-section {
        padding: 60px 0;
        background: var(--bg-secondary);
    }

    .section-title {
        font-family: var(--font-display);
        font-size: var(--text-2xl);
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 24px;
    }

    .neighborhoods-grid {
        display: flex;
        gap: 16px;
        flex-wrap: wrap;
    }

    .neighborhood-card {
        display: flex;
        flex-direction: column;
        gap: 4px;
        padding: 20px 28px;
        background: var(--bg-elevated);
        border-radius: var(--radius-xl);
        border: 1px solid var(--border-subtle);
        transition: all var(--duration-fast);
    }

    .neighborhood-card:hover {
        border-color: var(--accent);
        background: var(--accent-light);
    }

    .neighborhood-name {
        font-size: var(--text-base);
        font-weight: 600;
        color: var(--text-primary);
    }

    .neighborhood-count {
        font-size: var(--text-sm);
        color: var(--text-muted);
    }

    /* Properties Section */
    .properties-section {
        padding: 80px 0;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 32px;
    }

    .properties-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 32px;
    }

    .property-card {
        display: block;
        border-radius: var(--radius-2xl);
        overflow: hidden;
    }

    .property-media {
        position: relative;
        aspect-ratio: 4 / 3;
        overflow: hidden;
    }

    .property-media img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform var(--duration-slow) var(--ease-out);
    }

    .property-card:hover .property-media img {
        transform: scale(1.08);
    }

    .property-tag {
        position: absolute;
        top: 16px;
        left: 16px;
        padding: 6px 14px;
        font-size: var(--text-xs);
        font-weight: 700;
        text-transform: uppercase;
        border-radius: var(--radius-full);
    }

    .tag-featured {
        background: var(--accent);
        color: white;
    }
    .tag-new {
        background: var(--color-emerald);
        color: white;
    }
    .tag-premium {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
    }
    .tag-hot {
        background: var(--color-amber);
        color: var(--color-midnight);
    }

    .save-btn {
        position: absolute;
        top: 16px;
        right: 16px;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--bg-elevated);
        border-radius: 50%;
        color: var(--text-muted);
        box-shadow: var(--shadow-md);
        transition: all var(--duration-fast);
    }

    .save-btn:hover {
        color: var(--accent);
    }

    .property-body {
        padding: 20px;
    }

    .property-price {
        margin-bottom: 8px;
    }

    .price-amount {
        font-family: var(--font-display);
        font-size: var(--text-xl);
        font-weight: 600;
        color: var(--text-primary);
    }

    .price-type {
        font-size: var(--text-sm);
        color: var(--text-muted);
    }

    .property-title {
        font-size: var(--text-base);
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 8px;
    }

    .property-location {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: var(--text-sm);
        color: var(--text-muted);
        margin-bottom: 12px;
    }

    .property-features {
        display: flex;
        gap: 16px;
        font-size: var(--text-sm);
        color: var(--text-muted);
    }

    @media (max-width: 1024px) {
        .properties-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .hero-title {
            font-size: var(--text-4xl);
        }

        .city-stats {
            flex-wrap: wrap;
            gap: 24px;
        }

        .properties-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
